<!-- Featured Rooms Section -->
<section id="featured-rooms" class="rooms-section">
    <div class="container">
        <h2 class="section-title text-center">Phòng nổi bật</h2>
        <p class="section-subtitle text-center">Khám phá những lựa chọn tốt nhất của chúng tôi</p>

        <div class="room-carousel">
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var room in Model)
                    {
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="room-card">
                                <div class="room-img">
                                    <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id">
                                        <img src="@room.ImageUrl" alt="@room.Name" class="img-fluid">
                                    </a>
                                    <div class="room-price">
                                        <span>@String.Format("{0:N0}", room.PricePerNight) VNĐ</span>
                                        <small>/đêm</small>
                                    </div>
                                    <div class="room-badge">
                                        <span class="badge badge-featured">Nổi bật</span>
                                    </div>
                                </div>
                                <div class="room-info">
                                    <h3><a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id">@room.Name</a></h3>
                                    <div class="room-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Floor(room.AverageRating))
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else if (i - room.AverageRating < 1 && i - room.AverageRating > 0)
                                            {
                                                <i class="fas fa-star-half-alt"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                        <span>(@room.AverageRating.ToString("0.0"))</span>
                                    </div>
                                    <p>@(room.Description != null && room.Description.Length > 100 ? room.Description.Substring(0, 100) + "..." : room.Description)</p>
                                    <div class="room-features">
                                        <span><i class="fas fa-users"></i> @room.Capacity người</span>
                                        <span><i class="fas fa-bed"></i> @room.RoomType</span>
                                    </div>
                                    <div class="room-actions">
                                        <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id" class="btn btn-outline-primary">Xem chi tiết</a>
                                        <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@room.Id" class="btn btn-primary">Đặt ngay</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <div class="no-rooms-message">
                            <i class="fas fa-bed fa-3x mb-3 text-muted"></i>
                            <p>Hiện không có phòng nào để hiển thị</p>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                <a asp-controller="Home" asp-action="Rooms" class="btn btn-primary btn-lg">Xem tất cả phòng</a>
            </div>
        </div>
    </div>
</section>

