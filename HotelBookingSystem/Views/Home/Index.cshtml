@model List<HotelBookingSystem.ViewModels.Room.RoomCardViewModel>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section id="hero" class="hero-section">
    <div class="hero-content">
        <div class="hero-text">
            <h1>Chào mừng đến với Luxury Hotel</h1>
            <p>Trải nghiệm kỳ nghỉ đẳng cấp với dịch vụ 5 sao</p>
        </div>

        <!-- Search Form -->
        <div class="search-container">
            <form id="searchForm" asp-controller="Home" asp-action="Rooms" method="get">
                <div class="row search-box">
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>Nhận phòng</label>
                            <input type="date" class="form-control" id="checkin" name="checkin">
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>Trả phòng</label>
                            <input type="date" class="form-control" id="checkout" name="checkout">
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <div class="form-group">
                            <label>Người lớn</label>
                            <select class="form-control" id="adults" name="adults">
                                <option value="1">1</option>
                                <option value="2" selected>2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <div class="form-group">
                            <label>Trẻ em</label>
                            <select class="form-control" id="children" name="children">
                                <option value="0" selected>0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-search w-100">Tìm phòng</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="about-image">
                    <img src="/images/hotel-exterior.jpg" alt="Luxury Hotel">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-content">
                    <h2 class="section-title">Về chúng tôi</h2>
                    <p class="section-subtitle">Sang trọng & tiện nghi</p>
                    <div class="about-text">
                        <p>Luxury Hotel mang đến không gian nghỉ dưỡng sang trọng bậc nhất, nơi bạn có thể tận hưởng sự riêng tư và dịch vụ cá nhân hóa. Với vị trí đắc địa, khách sạn là điểm đến lý tưởng cho cả doanh nhân và du khách.</p>
                        <p>Chúng tôi tự hào về đội ngũ nhân viên chuyên nghiệp, luôn sẵn sàng đáp ứng mọi nhu cầu của quý khách.</p>
                    </div>
                    <div class="about-features">
                        <div class="feature-item">
                            <i class="fas fa-wifi"></i>
                            <span>Wifi miễn phí</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-swimming-pool"></i>
                            <span>Hồ bơi</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-spa"></i>
                            <span>Spa</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-utensils"></i>
                            <span>Nhà hàng</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Rooms Section -->
<section id="featured-rooms" class="rooms-section">
    <div class="container">
        <h2 class="section-title text-center">Phòng nổi bật</h2>
        <p class="section-subtitle text-center">Khám phá những lựa chọn tốt nhất của chúng tôi</p>

        <div class="room-carousel">
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var room in Model)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="room-card">
                                <div class="room-img">
                                    <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id">
                                        <img src="@room.ImageUrl" alt="@room.Name">
                                    </a>
                                    <div class="room-price">
                                        <span>@String.Format("{0:N0}", room.PricePerNight) VNĐ</span>
                                        <small>/đêm</small>
                                    </div>
                                </div>
                                <div class="room-info">
                                    <h3><a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id">@room.Name</a></h3>
                                    <div class="room-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Floor(room.AverageRating))
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else if (i - room.AverageRating < 1 && i - room.AverageRating > 0)
                                            {
                                                <i class="fas fa-star-half-alt"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                        <span>(@room.AverageRating.ToString("0.0"))</span>
                                    </div>
                                    <p>@(room.Description != null && room.Description.Length > 100 ? room.Description.Substring(0, 100) + "..." : room.Description)</p>
                                    <div class="room-features">
                                        <span><i class="fas fa-users"></i> @room.Capacity người</span>
                                        <span><i class="fas fa-bed"></i> @room.RoomType</span>
                                    </div>
                                    <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id" class="btn btn-outline-primary">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p>Hiện không có phòng nào để hiển thị</p>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Rooms" class="btn btn-primary">Xem tất cả phòng</a>
            </div>
        </div>
    </div>
</section>

