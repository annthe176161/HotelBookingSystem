@model HotelBookingSystem.ViewModels.Room.RoomListViewModel
@{
    ViewData["Title"] = "Phòng khả dụng";
}

<!-- Room List Header -->
<div class="room-list-header">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold text-primary mb-3">Phòng khả dụng</h1>
                <p class="lead text-dark mb-4 fs-5">Khám phá những phòng còn trống và sẵn sàng phục vụ bạn</p>
                <div class="availability-info mb-4">
                    <span class="badge bg-success fs-5 me-3 py-2 px-3">
                        <i class="fas fa-check-circle me-2"></i>Còn trống
                    </span>
                    <span class="badge bg-primary fs-5 py-2 px-3">
                        <i class="fas fa-calendar-check me-2"></i>Có thể đặt ngay
                    </span>
                </div>
                <nav aria-label="breadcrumb" class="d-flex justify-content-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/" aria-label="Trang chủ">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Phòng khả dụng</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Phần còn lại của trang giữ nguyên -->
<div class="room-list-section">
    <div class="container-fluid">
        <div class="row">
            <!-- Filters Sidebar -->
            <div class="col-lg-3 mb-4">
                <div class="room-filters">
                    <h3>Tìm kiếm phòng</h3>
                    
                    <form id="filterForm" method="get" asp-action="Rooms" asp-controller="Home" autocomplete="off">
                        <input type="hidden" name="page" value="1" />
                        <input type="hidden" name="sortBy" value="@Model.SortBy" />
                        
                        <!-- Guests -->
                        <div class="filter-group">
                            <h5><i class="fas fa-users me-2"></i>Số lượng khách</h5>
                            <div class="form-group mb-3">
                                <label for="guests">Số lượng khách</label>
                                <select class="form-control" name="guests" id="guests" aria-describedby="guests-help">
                                    @Html.Raw("<option value=\"0\"" + (Model.Guests == 0 ? " selected" : "") + ">Tất cả phòng</option>")
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        @Html.Raw("<option value=\"" + i + "\"" + (Model.Guests == i ? " selected" : "") + ">" + i + " người</option>")
                                    }
                                </select>
                                <small id="guests-help" class="form-text text-muted">Chọn số lượng khách hoặc "Tất cả" để xem tất cả phòng</small>
                            </div>
                        </div>
                        
                        <!-- Room Type -->
                        <div class="filter-group">
                            <h5><i class="fas fa-bed me-2"></i>Loại phòng</h5>
                            <div class="form-group mb-3">
                                <select class="form-control" name="roomType" id="roomTypeSelect" aria-describedby="roomtype-help">
                                    @Html.Raw("<option value=\"\"" + (string.IsNullOrWhiteSpace(Model.RoomType) ? " selected" : "") + ">Tất cả loại phòng</option>")
                                    @foreach (var type in Model.RoomTypes)
                                    {
                                        @Html.Raw("<option value=\"" + type + "\"" + (!string.IsNullOrWhiteSpace(Model.RoomType) && Model.RoomType == type ? " selected" : "") + ">" + type + "</option>")
                                    }
                                </select>
                                <small id="roomtype-help" class="form-text text-muted">Chọn loại phòng phù hợp</small>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 mb-3" aria-describedby="filter-help">
                            <i class="fas fa-search me-2"></i>Tìm kiếm phòng
                        </button>
                        <small id="filter-help" class="form-text text-muted d-block text-center mb-3">Nhấn để áp dụng bộ lọc</small>
                        
                        <div class="text-center">
                            <a href="@Url.Action("Rooms", "Home")" class="clear-filters" aria-label="Xóa tất cả bộ lọc">
                                Xóa tất cả bộ lọc
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Room List -->
            <div class="col-lg-9">
                <!-- Sorting Options -->
                <div class="room-sorting mb-4">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <p class="mb-1 fs-5 fw-semibold text-dark">
                                Hiển thị <span class="text-primary">@Model.Rooms.Count</span> của <span class="text-primary">@Model.TotalRooms</span> phòng khả dụng
                                @if (!string.IsNullOrEmpty(Model.RoomType))
                                {
                                    <span class="text-secondary">• Loại phòng: <strong class="text-info">@Model.RoomType</strong></span>
                                }
                            </p>
                            <div class="alert alert-success py-2 px-3 mb-0 d-inline-block">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Tất cả phòng hiển thị đều còn trống và có thể đặt ngay</strong>
                            </div>
                        </div>
                        <div class="sorting-options">
                            <label for="sortOptions" class="visually-hidden">Sắp xếp theo</label>
                            <select id="sortOptions" class="form-select" aria-label="Sắp xếp kết quả">
                                <option value="recommended" selected="@(Model.SortBy == "recommended" ? "selected" : null)">
                                    <i class="fas fa-star"></i> Đề xuất
                                </option>
                                <option value="price-low" selected="@(Model.SortBy == "price-low" ? "selected" : null)">
                                    <i class="fas fa-arrow-up"></i> Giá: Thấp → Cao
                                </option>
                                <option value="price-high" selected="@(Model.SortBy == "price-high" ? "selected" : null)">
                                    <i class="fas fa-arrow-down"></i> Giá: Cao → Thấp
                                </option>
                                <option value="rating" selected="@(Model.SortBy == "rating" ? "selected" : null)">
                                    <i class="fas fa-star"></i> Xếp hạng cao nhất
                                </option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <!-- Room Cards -->
                <div class="room-list" role="list" aria-label="Danh sách phòng">
                    @if (Model.Rooms.Any())
                    {
                        <div class="row">
                            @foreach (var room in Model.Rooms)
                            {
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <article class="room-card-vertical" role="listitem" aria-labelledby="room-@room.Id-title">
                                        <div class="room-img">
                                            <a href="@Url.Action("Details", "Rooms", new { id = room.Id })" 
                                               aria-label="Xem chi tiết @room.Name">
                                                <img src="@room.ImageUrl" 
                                                     alt="Hình ảnh phòng @room.Name" 
                                                     class="img-fluid"
                                                     loading="lazy">
                                            </a>
                                            <div class="room-price-badge">
                                                <span class="price">@String.Format("{0:N0}", room.PricePerNight) VNĐ</span>
                                                <span class="per-night">/ đêm</span>
                                            </div>
                                        </div>
                                        
                                        <div class="room-card-body">
                                            <div class="room-header mb-2">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <h3 class="room-title" id="room-@room.Id-title">
                                                            <a href="@Url.Action("Details", "Rooms", new { id = room.Id })" 
                                                               aria-describedby="room-@room.Id-desc">@room.Name</a>
                                                        </h3>
                                                        <div class="room-type">@room.RoomType</div>
                                                    </div>
                                                    <div class="availability-badge">
                                                        <span class="badge bg-success fs-6 fw-bold">
                                                            <i class="fas fa-check-circle me-1"></i>Còn trống
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="rating mb-2" aria-label="Đánh giá @room.AverageRating.ToString("0.0") trên 5 sao">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Math.Floor(room.AverageRating))
                                                    {
                                                        <i class="fas fa-star" aria-hidden="true"></i>
                                                    }
                                                    else if (i - room.AverageRating < 1 && i - room.AverageRating > 0)
                                                    {
                                                        <i class="fas fa-star-half-alt" aria-hidden="true"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star" aria-hidden="true"></i>
                                                    }
                                                }
                                                <span class="ms-1">@room.AverageRating.ToString("0.0")</span>
                                                <span class="reviews-count">(@room.ReviewsCount đánh giá)</span>
                                            </div>
                                            
                                            <div class="room-description mb-3" id="room-@room.Id-desc">
                                                @(room.Description?.Length > 80 ? $"{room.Description.Substring(0, 80)}..." : room.Description)
                                            </div>
                                            
                                            <div class="room-features mb-3">
                                                <div class="d-flex flex-wrap">
                                                    <span class="feature-item" aria-label="Sức chứa @room.Capacity người">
                                                        <i class="fas fa-users" aria-hidden="true"></i> @room.Capacity người
                                                    </span>
                                                    @foreach (var amenity in room.Amenities.Take(2))
                                                    {
                                                        <span class="feature-item" aria-label="Tiện nghi: @amenity">
                                                            <i class="fas @(amenity == "WiFi" ? "fa-wifi" : 
                                                                          amenity == "TV" ? "fa-tv" : 
                                                                          amenity == "Điều hòa" ? "fa-snowflake" : 
                                                                          amenity == "Minibar" ? "fa-glass-martini" : 
                                                                          amenity == "Két sắt" ? "fa-lock" : "fa-check")" aria-hidden="true"></i>
                                                            @amenity
                                                        </span>
                                                    }
                                                    @if (room.Amenities.Count > 2)
                                                    {
                                                        <span class="feature-item more-features" 
                                                              role="button" 
                                                              tabindex="0"
                                                              aria-label="Xem thêm @(room.Amenities.Count - 2) tiện nghi khác">
                                                            +@(room.Amenities.Count - 2) khác
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                            
                                            <div class="room-actions">
                                                <a href="@Url.Action("Details", "Rooms", new { id = room.Id })" 
                                                   class="btn btn-outline-primary"
                                                   aria-label="Xem chi tiết phòng @room.Name">
                                                    <i class="fas fa-info-circle me-1" aria-hidden="true"></i>
                                                    Chi tiết phòng
                                                </a>
                                                <a href="@Url.Action("Create", "Bookings", new { 
                                                       roomId = room.Id, 
                                                       checkin = Model.CheckInDate?.ToString("yyyy-MM-dd"), 
                                                       checkout = Model.CheckOutDate?.ToString("yyyy-MM-dd"),
                                                       guests = Model.Guests 
                                                   })" 
                                                   class="btn btn-primary"
                                                   aria-label="Đặt phòng @room.Name ngay">
                                                    <i class="fas fa-calendar-check me-1" aria-hidden="true"></i>
                                                    Đặt ngay
                                                </a>
                                            </div>
                                        </div>
                                    </article>
                                </div>
                            }
                        </div>
                        
                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Điều hướng trang" class="room-pagination mt-4">
                                <ul class="pagination justify-content-center">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" 
                                               href="@Url.Action("Rooms", new { 
                                                   page = Model.CurrentPage - 1, 
                                                   sortBy = Model.SortBy, 
                                                   guests = Model.Guests, 
                                                   roomType = Model.RoomType 
                                               })"
                                               aria-label="Trang trước">
                                                <i class="fas fa-chevron-left" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    }
                                    
                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" 
                                               href="@Url.Action("Rooms", new { 
                                                   page = i, 
                                                   sortBy = Model.SortBy, 
                                                   guests = Model.Guests, 
                                                   roomType = Model.RoomType 
                                               })"
                                               aria-label="@(i == Model.CurrentPage ? $"Trang {i} (hiện tại)" : $"Trang {i}")"
                                               @(i == Model.CurrentPage ? "aria-current=\"page\"" : "")>
                                                @i
                                            </a>
                                        </li>
                                    }
                                    
                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" 
                                               href="@Url.Action("Rooms", new { 
                                                   page = Model.CurrentPage + 1, 
                                                   sortBy = Model.SortBy, 
                                                   guests = Model.Guests, 
                                                   roomType = Model.RoomType 
                                               })"
                                               aria-label="Trang tiếp theo">
                                                <i class="fas fa-chevron-right" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="no-rooms-found text-center py-5" role="status" aria-live="polite">
                            <div class="d-flex flex-column align-items-center">
                                <i class="fas fa-bed fa-4x mb-3 text-muted" aria-hidden="true"></i>
                                <h3>Không tìm thấy phòng nào</h3>
                                <p class="text-muted mb-4">Không có phòng nào phù hợp với tiêu chí tìm kiếm của bạn.</p>
                                <a href="@Url.Action("Rooms", "Home")" class="btn btn-primary d-inline-flex align-items-center" aria-label="Xóa bộ lọc và xem tất cả phòng">
                                    <i class="fas fa-refresh me-2" aria-hidden="true"></i>
                                    Xem tất cả phòng
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Available Rooms Info Section -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-0 shadow-lg">
                    <div class="card-body bg-gradient" style="background: linear-gradient(135deg, #e3f2fd 0%, #f8f9fa 100%);">
                        <div class="row align-items-center">
                            <div class="col-md-10 mx-auto text-center">
                                <h4 class="card-title text-primary fw-bold mb-4">
                                    <i class="fas fa-shield-check me-3 fs-3"></i>
                                    Cam kết về tình trạng phòng
                                </h4>
                                <p class="lead text-dark mb-4 fs-5">
                                    <strong>Tất cả phòng hiển thị trên trang này đều được đảm bảo:</strong>
                                </p>
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center justify-content-center mb-3">
                                            <div class="bg-success rounded-circle p-3 me-3">
                                                <i class="fas fa-check text-white fs-4"></i>
                                            </div>
                                            <div class="text-start">
                                                <h6 class="text-success fw-bold mb-1">Hiện đang còn trống</h6>
                                                <small class="text-muted">Phòng sẵn sàng cho khách</small>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-center">
                                            <div class="bg-primary rounded-circle p-3 me-3">
                                                <i class="fas fa-clock text-white fs-4"></i>
                                            </div>
                                            <div class="text-start">
                                                <h6 class="text-primary fw-bold mb-1">Có thể đặt ngay lập tức</h6>
                                                <small class="text-muted">Không cần chờ đợi</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center justify-content-center mb-3">
                                            <div class="bg-info rounded-circle p-3 me-3">
                                                <i class="fas fa-handshake text-white fs-4"></i>
                                            </div>
                                            <div class="text-start">
                                                <h6 class="text-info fw-bold mb-1">Sẵn sàng phục vụ khách hàng</h6>
                                                <small class="text-muted">Dịch vụ tốt nhất</small>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-center">
                                            <div class="bg-warning rounded-circle p-3 me-3">
                                                <i class="fas fa-bolt text-white fs-4"></i>
                                            </div>
                                            <div class="text-start">
                                                <h6 class="text-warning fw-bold mb-1">Không cần chờ xác nhận</h6>
                                                <small class="text-muted">Xác nhận tức thì</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 p-3 bg-white rounded shadow-sm">
                                    <p class="mb-0 text-muted fst-italic">
                                        <i class="fas fa-sync-alt me-2 text-primary"></i>
                                        <strong>Chúng tôi cập nhật tình trạng phòng liên tục để đảm bảo thông tin chính xác nhất.</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/rooms-list.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/rooms-list.css" asp-append-version="true" />
}