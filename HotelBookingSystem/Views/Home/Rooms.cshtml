@model HotelBookingSystem.ViewModels.RoomsViewModel.RoomsViewModel
@{
    ViewData["Title"] = "Danh sách phòng";
}

<!-- Hero Banner -->
<div class="room-banner">
    <div class="overlay"></div>
    <div class="container">
        <div class="banner-content">
            <h1>Phòng & Suites</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Danh sách phòng</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Search & Filter Section -->
<div class="search-filter-section">
    <div class="container">
        <div class="search-filter-container">
            <form id="roomSearchForm">
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-3 mb-lg-0">
                        <div class="form-floating">
                            <input type="date" class="form-control" id="checkin" name="checkin" value="@Model.CheckIn.ToString("yyyy-MM-dd")">
                            <label for="checkin">Nhận phòng</label>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3 mb-lg-0">
                        <div class="form-floating">
                            <input type="date" class="form-control" id="checkout" name="checkout" value="@Model.CheckOut.ToString("yyyy-MM-dd")">
                            <label for="checkout">Trả phòng</label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 mb-3 mb-lg-0">
                        <div class="form-floating">
                            <select class="form-select" id="adults" name="adults">
                                @for(int i = 1; i <= 6; i++)
                                {
                                    <option value="@i" selected="@(Model.Adults == i)">@i</option>
                                }
                            </select>
                            <label for="adults">Người lớn</label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4 mb-3 mb-lg-0">
                        <div class="form-floating">
                            <select class="form-select" id="children" name="children">
                                @for(int i = 0; i <= 4; i++)
                                {
                                    <option value="@i" selected="@(Model.Children == i)">@i</option>
                                }
                            </select>
                            <label for="children">Trẻ em</label>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <button type="submit" class="btn btn-primary search-btn w-100">
                            <i class="fas fa-search me-2"></i>Tìm phòng
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Rooms Section -->
<div class="rooms-section">
    <div class="container">
        <div class="row">
            <!-- Sidebar Filters -->
            <div class="col-lg-3">
                <div class="filters-sidebar">
                    <div class="filter-header d-flex justify-content-between align-items-center d-lg-none">
                        <h5 class="m-0">Bộ lọc</h5>
                        <button class="btn btn-sm btn-outline-secondary" id="closeFilters">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    
                    <div class="filter-group">
                        <h5>Khoảng giá</h5>
                        <div class="price-slider-container">
                            <div class="price-slider">
                                <div id="priceRange"></div>
                            </div>
                            <div class="price-values">
                                <span id="priceMin">0</span>
                                <span id="priceMax">10.000.000</span>
                            </div>
                            <input type="hidden" id="minPrice" name="minPrice" value="0">
                            <input type="hidden" id="maxPrice" name="maxPrice" value="10000000">
                        </div>
                    </div>

                    <div class="filter-group">
                        <h5>Loại phòng</h5>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="standard" id="roomTypeStandard" checked>
                            <label class="form-check-label" for="roomTypeStandard">
                                Phòng tiêu chuẩn
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="deluxe" id="roomTypeDeluxe" checked>
                            <label class="form-check-label" for="roomTypeDeluxe">
                                Phòng Deluxe
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="suite" id="roomTypeSuite" checked>
                            <label class="form-check-label" for="roomTypeSuite">
                                Phòng Suite
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="family" id="roomTypeFamily" checked>
                            <label class="form-check-label" for="roomTypeFamily">
                                Phòng gia đình
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="executive" id="roomTypeExecutive" checked>
                            <label class="form-check-label" for="roomTypeExecutive">
                                Phòng Executive
                            </label>
                        </div>
                    </div>

                    <div class="filter-group">
                        <h5>Tiện nghi</h5>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="wifi" id="amenityWifi">
                            <label class="form-check-label" for="amenityWifi">
                                <i class="fas fa-wifi me-2"></i> Wifi miễn phí
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="breakfast" id="amenityBreakfast">
                            <label class="form-check-label" for="amenityBreakfast">
                                <i class="fas fa-coffee me-2"></i> Bữa sáng miễn phí
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="ac" id="amenityAC">
                            <label class="form-check-label" for="amenityAC">
                                <i class="fas fa-snowflake me-2"></i> Điều hòa
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="tv" id="amenityTV">
                            <label class="form-check-label" for="amenityTV">
                                <i class="fas fa-tv me-2"></i> TV màn hình phẳng
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="bath" id="amenityBath">
                            <label class="form-check-label" for="amenityBath">
                                <i class="fas fa-bath me-2"></i> Bồn tắm riêng
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="minibar" id="amenityMinibar">
                            <label class="form-check-label" for="amenityMinibar">
                                <i class="fas fa-glass-martini me-2"></i> Minibar
                            </label>
                        </div>
                    </div>

                    <div class="filter-group">
                        <h5>Xếp hạng</h5>
                        <div class="rating-filter">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ratingFilter" id="rating5" value="5">
                                <label class="form-check-label" for="rating5">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ratingFilter" id="rating4" value="4">
                                <label class="form-check-label" for="rating4">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <span class="ms-1">& Trở lên</span>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ratingFilter" id="rating3" value="3">
                                <label class="form-check-label" for="rating3">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <span class="ms-1">& Trở lên</span>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="ratingFilter" id="rating0" value="0" checked>
                                <label class="form-check-label" for="rating0">
                                    Tất cả đánh giá
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="filter-actions">
                        <button id="applyFilters" class="btn btn-primary">Áp dụng</button>
                        <button id="resetFilters" class="btn btn-outline-secondary">Đặt lại</button>
                    </div>
                </div>
            </div>

            <!-- Rooms Listing -->
            <div class="col-lg-9">
                <div class="rooms-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3>Danh sách phòng có sẵn</h3>
                            <p class="text-muted">Hiển thị @Model.TotalRooms phòng phù hợp với tìm kiếm của bạn</p>
                        </div>
                        <div class="d-flex">
                            <button class="btn btn-outline-secondary me-2 d-lg-none" id="showFilters">
                                <i class="fas fa-filter"></i> Bộ lọc
                            </button>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    Sắp xếp theo
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                                    <li><button class="dropdown-item sort-option" data-sort="price-asc">Giá (Thấp - Cao)</button></li>
                                    <li><button class="dropdown-item sort-option" data-sort="price-desc">Giá (Cao - Thấp)</button></li>
                                    <li><button class="dropdown-item sort-option" data-sort="rating-desc">Đánh giá (Cao nhất)</button></li>
                                    <li><button class="dropdown-item sort-option" data-sort="popular">Phổ biến nhất</button></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="rooms-list">
                    @foreach (var room in Model.Rooms)
                    {
                        <div class="room-item" data-price="@room.PricePerNight" data-rating="@room.AverageRating" data-type="@room.RoomType.ToLower()">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <div class="room-image">
                                        <img src="@room.ImageUrl" alt="@room.Name" class="img-fluid">
                                        @if (room.IsPromotion)
                                        {
                                            <div class="promotion-badge">
                                                <span>Khuyến mãi</span>
                                            </div>
                                        }
                                        <button class="favorite-btn" data-room-id="@room.Id">
                                            <i class="@(room.IsFavorited ? "fas" : "far") fa-heart"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="room-content">
                                        <div class="room-header">
                                            <div>
                                                <h4>@room.Name</h4>
                                                <div class="room-rating">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Floor(room.AverageRating))
                                                        {
                                                            <i class="fas fa-star"></i>
                                                        }
                                                        else if (i - room.AverageRating < 1 && i - room.AverageRating > 0)
                                                        {
                                                            <i class="fas fa-star-half-alt"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star"></i>
                                                        }
                                                    }
                                                    <span>@room.AverageRating (@room.ReviewsCount đánh giá)</span>
                                                </div>
                                            </div>
                                            <div class="room-price">
                                                @if (room.OriginalPrice > room.PricePerNight)
                                                {
                                                    <div class="original-price">@string.Format("{0:N0} VNĐ", room.OriginalPrice)</div>
                                                }
                                                <div class="current-price">@string.Format("{0:N0} VNĐ", room.PricePerNight)</div>
                                                <div class="price-unit">/đêm</div>
                                            </div>
                                        </div>

                                        <div class="room-amenities">
                                            <span><i class="fas fa-ruler-combined"></i> @room.Size m²</span>
                                            <span><i class="fas fa-bed"></i> @room.BedType</span>
                                            <span><i class="fas fa-users"></i> @room.Capacity người</span>
                                            <span><i class="fas fa-coffee"></i> @(room.IncludeBreakfast ? "Bao gồm bữa sáng" : "Không bao gồm bữa sáng")</span>
                                        </div>

                                        <p class="room-description">@room.Description</p>

                                        <div class="room-features">
                                            @foreach (var feature in room.Features)
                                            {
                                                <span><i class="@feature.Icon"></i> @feature.Name</span>
                                            }
                                        </div>

                                        <div class="room-actions">
                                            <a href="@Url.Action("Details", "Rooms", new { id = room.Id })" class="btn btn-outline-primary">Chi tiết</a>
                                            <button class="btn btn-primary book-now-btn" data-room-id="@room.Id">Đặt ngay</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Rooms", "Home", new { page = Model.CurrentPage - 1, checkin = Model.CheckIn.ToString("yyyy-MM-dd"), checkout = Model.CheckOut.ToString("yyyy-MM-dd"), adults = Model.Adults, children = Model.Children })" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Rooms", "Home", new { page = i, checkin = Model.CheckIn.ToString("yyyy-MM-dd"), checkout = Model.CheckOut.ToString("yyyy-MM-dd"), adults = Model.Adults, children = Model.Children })">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Rooms", "Home", new { page = Model.CurrentPage + 1, checkin = Model.CheckIn.ToString("yyyy-MM-dd"), checkout = Model.CheckOut.ToString("yyyy-MM-dd"), adults = Model.Adults, children = Model.Children })" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/nouislider@15.5.1/dist/nouislider.min.js"></script>
    <script src="~/js/rooms.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/nouislider@15.5.1/dist/nouislider.min.css">
    <link rel="stylesheet" href="~/css/rooms.css" asp-append-version="true" />
}