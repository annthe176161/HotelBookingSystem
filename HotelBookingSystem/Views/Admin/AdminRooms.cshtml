@model HotelBookingSystem.ViewModels.Admin.RoomsQueryViewModel
@{
    ViewData["Title"] = "Quản lý phòng";
    Layout = "_AdminLayout";
}

<div class="admin-rooms">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0">Quản lý phòng</h1>
            <a href="/Admin/AddRoom" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm phòng mới
            </a>
        </div>
    </div>

    <!-- Room Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card status-card h-100 available">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="status-title">Phòng trống</h6>
                            <h3 class="status-value">@Model.AvailableCount</h3>
                        </div>
                        <div class="status-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card status-card h-100 occupied">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="status-title">Đang sử dụng</h6>
                            <h3 class="status-value">@Model.OccupiedCount</h3>
                        </div>
                        <div class="status-icon">
                            <i class="fas fa-bed"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card status-card h-100 maintenance">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="status-title">Đang hoạt động</h6>
                            <h3 class="status-value">@Model.ActivatedCount</h3>
                        </div>
                        <div class="status-icon">
                            <i class="fas fa-tools"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card status-card h-100 cleaning">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="status-title">Đã vô hiệu</h6>
                            <h3 class="status-value">@Model.DeactivatedCount</h3>
                        </div>
                        <div class="status-icon">
                            <i class="fas fa-broom"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search & Filter Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <form id="roomSearchForm" class="room-search-form">
                <div class="row g-3">
                    <div class="col-lg-3 col-md-6">
                        <input type="text" class="form-control" placeholder="Tìm kiếm theo tên" name="searchTerm">
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <select class="form-select" name="roomType">
                            <option value="">Tất cả loại phòng</option>
                            <option value="standard">Standard</option>
                            <option value="deluxe">Deluxe</option>
                            <option value="suite">Suite</option>
                            <option value="executive">Executive</option>
                            <option value="family">Family</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <select class="form-select" name="status">
                            <option value="">Tất cả trạng thái</option>
                            <option value="available">Trống</option>
                            <option value="unavailable">Đang sử dụng</option>
                            <option value="activated">Đang hoạt động</option>
                            <option value="deactivated">Đã vô hiệu</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <select class="form-select" name="sortBy">
                            <option value="name">Sắp xếp theo tên</option>
                            <option value="price">Sắp xếp theo giá</option>
                            <option value="type">Sắp xếp theo loại</option>
                            <option value="capacity">Sắp xếp theo sức chứa</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-12">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                            <a href="@Url.Action("Rooms", "Admin")" class="btn btn-outline-secondary">
                                <i class="fas fa-sync-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Rooms Table -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Danh sách phòng</h5>
                <div class="d-flex">
                    <div class="dropdown me-2">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-download me-1"></i> Xuất
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="exportDropdown">
                            <li><a class="dropdown-item" href="#"><i class="far fa-file-excel me-2"></i>Excel</a></li>
                            <li><a class="dropdown-item" href="#"><i class="far fa-file-pdf me-2"></i>PDF</a></li>
                            <li><a class="dropdown-item" href="#"><i class="far fa-file-csv me-2"></i>CSV</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Hình ảnh</th>
                            <th scope="col">Tên phòng</th>
                            <th scope="col">Loại phòng</th>
                            <th scope="col">Giá/đêm</th>
                            <th scope="col">Sức chứa</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col">Đánh giá</th>
                            <th scope="col">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model.Rooms!)
                        {
                            <tr>
                                <td>
                                    <div class="room-image">
                                        <img src="@room.ImageUrl" alt="@room.Name">
                                    </div>
                                </td>
                                <td>@room.Name</td>
                                <td>@room.RoomType</td>
                                <td>@room.PricePerNight.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                <td>@room.Capacity người</td>
                                <td>
                                    @if (room.IsActivated)
                                    {
                                        @if (room.IsAvailable)
                                        {
                                            <span class="badge bg-success">Trống</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Đang sử dụng</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã vô hiệu</span>
                                    }
                                </td>
                                <td>
                                    <div class="room-rating">
                                        <i class="fas fa-star"></i>
                                        <span>@room.AverageRating.ToString("0.0")</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-sm btn-outline-primary me-1"
                                           asp-controller="Admin" asp-action="EditRoom" asp-route-id="@room.Id">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (room.IsActivated)
                                        {
                                            <form asp-action="Deactivate" asp-route-id="@room.Id" method="post" class="me-1">
                                                <button type="submit" class="btn btn-sm btn-outline-warning" title="Vô hiệu">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="Activate" asp-route-id="@room.Id" method="post" class="me-1">
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Kích hoạt">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <!-- Pagination info -->
                <div class="pagination-info">
                    @if (Model.TotalCount > 0)
                    {
                        var startItem = (Model.Page - 1) * Model.PageSize + 1;
                        var endItem = Math.Min(Model.Page * Model.PageSize, Model.TotalCount);
                        <text>Hiển thị <span>@startItem</span> đến <span>@endItem</span> của <span>@Model.TotalCount</span> phòng</text>
                    }
                    else
                    {
                        <text>Không có phòng nào</text>
                    }
                </div>

                <!-- Pagination controls -->
                <ul class="pagination mb-0">
                    <!-- Previous -->
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link"
                           href="@Url.Action("Rooms", new {
                        page = Model.Page - 1,
                        searchTerm = Model.SearchTerm,
                        roomType = Model.RoomType,
                        status = Model.Status,
                        sortBy = Model.SortBy,
                        sortDescending = Model.SortDescending,
                        pageSize = Model.PageSize
                   })">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </li>

                    <!-- Page numbers -->
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link"
                               href="@Url.Action("Rooms", new {
                            page = i,
                            searchTerm = Model.SearchTerm,
                            roomType = Model.RoomType,
                            status = Model.Status,
                            sortBy = Model.SortBy,
                            sortDescending = Model.SortDescending,
                            pageSize = Model.PageSize
                       })">@i</a>
                        </li>
                    }

                    <!-- Next -->
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link"
                           href="@Url.Action("Rooms", new {
                        page = Model.Page + 1,
                        searchTerm = Model.SearchTerm,
                        roomType = Model.RoomType,
                        status = Model.Status,
                        sortBy = Model.SortBy,
                        sortDescending = Model.SortDescending,
                        pageSize = Model.PageSize
                   })">
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                </ul>

                <!-- Items per page -->
                <div class="items-per-page">
                    <select class="form-select form-select-sm"
                            onchange="location.href='@Url.Action("Rooms", new {
                                searchTerm = Model.SearchTerm,
                                roomType = Model.RoomType,
                                status = Model.Status,
                                sortBy = Model.SortBy,
                                sortDescending = Model.SortDescending,
                                page = 1 // reset to first page when changing size
                            })&pageSize=' + this.value">
                        <option value="10" selected="@(Model.PageSize == 10)">10 / trang</option>
                        <option value="25" selected="@(Model.PageSize == 25)">25 / trang</option>
                        <option value="50" selected="@(Model.PageSize == 50)">50 / trang</option>
                        <option value="100" selected="@(Model.PageSize == 100)">100 / trang</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Room status card styles */
        .status-card.available {
            border-left: 4px solid #1cc88a;
        }

        .status-card.occupied {
            border-left: 4px solid #f6c23e;
        }

        .status-card.maintenance {
            border-left: 4px solid #e74a3b;
        }

        .status-card.cleaning {
            border-left: 4px solid #36b9cc;
        }

        .status-card.available .status-icon {
            color: #1cc88a;
        }

        .status-card.occupied .status-icon {
            color: #f6c23e;
        }

        .status-card.maintenance .status-icon {
            color: #e74a3b;
        }

        .status-card.cleaning .status-icon {
            color: #36b9cc;
        }

        /* Room images in table */
        .room-image {
            width: 60px;
            height: 40px;
            overflow: hidden;
            border-radius: 4px;
        }

            .room-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Room rating */
        .room-rating {
            display: flex;
            align-items: center;
        }

            .room-rating i {
                color: #f6c23e;
                margin-right: 4px;
            }

        /* Bulk actions bar */
        .bulk-actions-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: #3a3b45;
            color: white;
            padding: 0.75rem 1rem;
            z-index: 1030;
            box-shadow: 0 -0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
    </style>
}