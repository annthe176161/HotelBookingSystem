                            <td>2 người</td>
                            <td><span class="badge bg-success">Trống</span></td>
                            <td>3</td>
                            <td>
                                <div class="room-rating">
                                    <i class="fas fa-star"></i>
                                    <span>4.8</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex">
                                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editRoomModal" data-room-id="1">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteRoomModal" data-room-id="1">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </td>
                            <td>
                                <div class="room-image">
                                    <img src="/images/rooms/standard-twin.jpg" alt="Standard Twin">
                                </div>
                            </td>
                            <td>Phòng Standard Giường Đôi</td>
                            <td>Standard</td>
                            <td>1.200.000 VNĐ</td>
                            <td>2 người</td>
                            <td><span class="badge bg-warning text-dark">Đang sử dụng</span></td>
                            <td>2</td>
                            <td>
                                <div class="room-rating">
                                    <i class="fas fa-star"></i>
                                    <span>4.5</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex">
                                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editRoomModal" data-room-id="2">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteRoomModal" data-room-id="2">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </td>
                            <td>
                                <div class="room-image">
                                    <img src="/images/rooms/family-suite.jpg" alt="Family Suite">
                                </div>
                            </td>
                            <td>Phòng Suite Gia Đình</td>
                            <td>Suite</td>
                            <td>3.500.000 VNĐ</td>
                            <td>4 người</td>
                            <td><span class="badge bg-success">Trống</span></td>
                            <td>5</td>
                            <td>
                                <div class="room-rating">
                                    <i class="fas fa-star"></i>
                                    <span>4.9</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex">
                                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editRoomModal" data-room-id="3">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteRoomModal" data-room-id="3">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </td>
                            <td>
                                <div class="room-image">
                                    <img src="/images/rooms/executive-business.jpg" alt="Executive Business">
                                </div>
                            </td>
                            <td>Phòng Executive Business</td>
                            <td>Executive</td>
                            <td>2.700.000 VNĐ</td>
                            <td>2 người</td>
                            <td><span class="badge bg-warning text-dark">Đang sử dụng</span></td>
                            <td>6</td>
                            <td>
                                <div class="room-rating">
                                    <i class="fas fa-star"></i>
                                    <span>4.7</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex">
                                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editRoomModal" data-room-id="4">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteRoomModal" data-room-id="4">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </td>
                            <td>
                                <div class="room-image">
                                    <img src="/images/rooms/presidential-suite.jpg" alt="Presidential Suite">
                                </div>
                            </td>
                            <td>Phòng Tổng Thống</td>
                            <td>Suite</td>
                            <td>8.000.000 VNĐ</td>
                            <td>4 người</td>
                            <td><span class="badge bg-info text-white">Đang dọn dẹp</span></td>
                            <td>8</td>
                            <td>
                                <div class="room-rating">
                                    <i class="fas fa-star"></i>
                                    <span>5.0</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex">
                                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editRoomModal" data-room-id="5">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteRoomModal" data-room-id="5">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div class="pagination-info">
                    Hiển thị <span>1</span> đến <span>5</span> của <span>25</span> phòng
                </div>
                <ul class="pagination mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                </ul>
                <div class="items-per-page">
                    <select class="form-select form-select-sm">
                        <option value="10">10 / trang</option>
                        <option value="25">25 / trang</option>
                        <option value="50">50 / trang</option>
                        <option value="100">100 / trang</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Actions Fixed Bar -->
    <div class="bulk-actions-bar" style="display: none;">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <span class="selected-count">5</span> phòng đã chọn
                </div>
                <div class="bulk-actions">
                    <button class="btn btn-sm btn-outline-success me-2" id="bulkAvailable">
                        <i class="fas fa-check-circle me-1"></i> Đánh dấu trống
                    </button>
                    <button class="btn btn-sm btn-outline-warning me-2" id="bulkMaintenance">
                        <i class="fas fa-tools me-1"></i> Đánh dấu bảo trì
                    </button>
                    <button class="btn btn-sm btn-outline-danger me-2" id="bulkDelete">
                        <i class="fas fa-trash me-1"></i> Xóa
                    </button>
                </div>
                <button class="btn btn-sm btn-outline-secondary ms-auto" id="clearSelection">
                    <i class="fas fa-times me-1"></i> Bỏ chọn
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add Room Modal -->
<div class="modal fade" id="addRoomModal" tabindex="-1" aria-labelledby="addRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRoomModalLabel">Thêm phòng mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addRoomForm">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="roomName" class="form-label">Tên phòng <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="roomName" required>
                        </div>
                        <div class="col-md-6">
                            <label for="roomType" class="form-label">Loại phòng <span class="text-danger">*</span></label>
                            <select class="form-select" id="roomType" required>
                                <option value="" selected disabled>Chọn loại phòng</option>
                                <option value="standard">Standard</option>
                                <option value="deluxe">Deluxe</option>
                                <option value="suite">Suite</option>
                                <option value="executive">Executive</option>
                                <option value="family">Family</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="roomPrice" class="form-label">Giá phòng (VNĐ/đêm) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="roomPrice" min="0" step="100000" required>
                                <span class="input-group-text">VNĐ</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="roomCapacity" class="form-label">Sức chứa <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="roomCapacity" min="1" max="10" required>
                                <span class="input-group-text">người</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="roomFloor" class="form-label">Tầng</label>
                            <input type="number" class="form-control" id="roomFloor" min="1" max="20">
                        </div>
                        <div class="col-md-4">
                            <label for="roomNumber" class="form-label">Số phòng</label>
                            <input type="text" class="form-control" id="roomNumber">
                        </div>
                        <div class="col-md-4">
                            <label for="roomStatus" class="form-label">Trạng thái</label>
                            <select class="form-select" id="roomStatus">
                                <option value="available" selected>Trống</option>
                                <option value="occupied">Đang sử dụng</option>
                                <option value="maintenance">Bảo trì</option>
                                <option value="cleaning">Đang dọn dẹp</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="roomDescription" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="roomDescription" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="roomAmenities" class="form-label">Tiện nghi</label>
                        <div class="amenities-container">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="wifi" value="wifi">
                                <label class="form-check-label" for="wifi">Wi-Fi</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="tv" value="tv">
                                <label class="form-check-label" for="tv">TV</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="ac" value="ac">
                                <label class="form-check-label" for="ac">Điều hòa</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="minibar" value="minibar">
                                <label class="form-check-label" for="minibar">Minibar</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="safe" value="safe">
                                <label class="form-check-label" for="safe">Két an toàn</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="bathtub" value="bathtub">
                                <label class="form-check-label" for="bathtub">Bồn tắm</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="roomImages" class="form-label">Hình ảnh</label>
                        <input type="file" class="form-control" id="roomImages" multiple accept="image/*">
                        <div class="form-text">Tối đa 5 hình ảnh. Kích thước tối đa 5MB mỗi ảnh.</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="saveRoomBtn">Lưu phòng</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Room Modal (similar to Add Room Modal with pre-populated data) -->
<div class="modal fade" id="editRoomModal" tabindex="-1" aria-labelledby="editRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editRoomModalLabel">Sửa thông tin phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- The form will be identical to addRoomForm but with pre-populated data -->
                <!-- This would be implemented using JavaScript to fill in the data -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="updateRoomBtn">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Room Modal -->
<div class="modal fade" id="deleteRoomModal" tabindex="-1" aria-labelledby="deleteRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteRoomModalLabel">Xác nhận xóa phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa phòng <strong id="deleteRoomName">Phòng Deluxe Hướng Biển</strong>?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span>Cảnh báo: Thao tác này không thể hoàn tác. Tất cả dữ liệu liên quan đến phòng này sẽ bị xóa.</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Xác nhận xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Select all checkboxes
            $('#selectAll').change(function() {
