@model HotelBookingSystem.ViewModels.Admin.CreateUserViewModel
@{
    ViewData["Title"] = "Thêm khách hàng mới";
    Layout = "_AdminLayout";
}

<div class="admin-rooms">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0">Thêm khách hàng mới</h1>
            <a href="/Admin/Users" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="AddUser" asp-controller="Admin" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="mb-3">Thông tin cơ bản</h5>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="mb-3">Bảo mật & Trạng thái</h5>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IsActivated" class="form-label"></label>
                            <select asp-for="IsActivated" class="form-select">
                                <option value="true">Đang kích hoạt</option>
                                <option value="false">Đã vô hiệu</option>
                            </select>
                            <span asp-validation-for="IsActivated" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="EmailConfirmed" class="form-check-input" id="emailConfirmed" />
                            <label class="form-check-label" for="emailConfirmed">Đánh dấu email đã xác thực</label>
                            <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-actions text-end">
                    <a href="/Admin/Users" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-times me-1"></i> Hủy
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu khách hàng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-label {
            font-weight: 500;
        }
    </style>
}
