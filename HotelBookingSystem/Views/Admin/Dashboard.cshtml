@model HotelBookingSystem.ViewModels.Admin.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="admin-dashboard">
    <!-- Dashboard Header -->
    <div class="dashboard-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0">Dashboard</h1>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card metric-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="metric-title">Doanh thu</h6>
                            <h3 class="metric-value">@Model.TotalRevenue.ToString("N0") VNĐ</h3>
                            <div class="metric-change @(Model.RevenueGrowth >= 0 ? "positive" : "negative")">
                                <i class="fas fa-arrow-@(Model.RevenueGrowth >= 0 ? "up" : "down")"></i>
                                @Math.Abs(Model.RevenueGrowth).ToString("F1")% <span class="small">so với tháng trước</span>
                            </div>
                        </div>
                        <div class="metric-icon">
                            <i class="fas fa-money-bill-wave"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card metric-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="metric-title">Đặt phòng</h6>
                            <h3 class="metric-value">@Model.TotalBookings</h3>
                            <div class="metric-change @(Model.BookingGrowth >= 0 ? "positive" : "negative")">
                                <i class="fas fa-arrow-@(Model.BookingGrowth >= 0 ? "up" : "down")"></i>
                                @Math.Abs(Model.BookingGrowth).ToString("F1")% <span class="small">so với tháng trước</span>
                            </div>
                        </div>
                        <div class="metric-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card metric-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="metric-title">Công suất phòng</h6>
                            <h3 class="metric-value">@Model.OccupancyRate.ToString("F1")%</h3>
                            <div class="metric-change @(Model.OccupancyGrowth >= 0 ? "positive" : "negative")">
                                <i class="fas fa-arrow-@(Model.OccupancyGrowth >= 0 ? "up" : "down")"></i>
                                @Math.Abs(Model.OccupancyGrowth).ToString("F1")% <span class="small">so với tháng trước</span>
                            </div>
                        </div>
                        <div class="metric-icon">
                            <i class="fas fa-bed"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card metric-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="metric-title">Khách hàng mới</h6>
                            <h3 class="metric-value">@Model.NewCustomers</h3>
                            <div class="metric-change @(Model.CustomerGrowth >= 0 ? "positive" : "negative")">
                                <i class="fas fa-arrow-@(Model.CustomerGrowth >= 0 ? "up" : "down")"></i>
                                @Math.Abs(Model.CustomerGrowth).ToString("F1")% <span class="small">so với tháng trước</span>
                            </div>
                        </div>
                        <div class="metric-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-xl-8 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Doanh thu theo tháng</h5>
                    <div class="card-actions">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                id="revenueDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                @DateTime.Now.Year
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="revenueDropdown">
                                <li><a class="dropdown-item" href="#">@DateTime.Now.Year</a></li>
                                <li><a class="dropdown-item" href="#">@(DateTime.Now.Year - 1)</a></li>
                                <li><a class="dropdown-item" href="#">@(DateTime.Now.Year - 2)</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="300"></canvas>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Loại phòng được đặt</h5>
                    <div class="card-actions">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                id="roomTypeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                Tháng này
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="roomTypeDropdown">
                                <li><a class="dropdown-item" href="#">Tháng này</a></li>
                                <li><a class="dropdown-item" href="#">Quý này</a></li>
                                <li><a class="dropdown-item" href="#">Năm nay</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="roomTypeChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Bookings & Availability -->
    <div class="row mb-4">
        <div class="col-xl-8 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Đặt phòng gần đây</h5>
                    <a href="/Admin/Bookings" class="btn btn-sm btn-primary">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã đặt</th>
                                    <th>Khách hàng</th>
                                    <th>Phòng</th>
                                    <th>Nhận phòng</th>
                                    <th>Trả phòng</th>
                                    <th>Trạng thái</th>
                                    <th>Tổng tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model.RecentBookings)
                                {
                                    <tr>
                                        <td>@booking.BookingNumber</td>
                                        <td>@booking.CustomerName</td>
                                        <td>@booking.RoomName</td>
                                        <td>@booking.CheckIn.ToString("dd/MM/yyyy")</td>
                                        <td>@booking.CheckOut.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge @(booking.Status switch {
                                                "Chờ xác nhận" => "bg-warning text-dark",
                                                "Đã xác nhận" => "bg-primary",
                                                "Hoàn thành" => "bg-success",
                                                "Đã hủy" => "bg-danger",
                                                _ => "bg-secondary"
                                            })">@booking.Status</span>
                                        </td>
                                        <td>@booking.TotalPrice.ToString("N0") VNĐ</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-sm" type="button" data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li><a class="dropdown-item" href="/Admin/BookingDetails/@booking.Id">
                                                        <i class="fas fa-eye me-2"></i>Chi tiết</a></li>
                                                    @if (booking.Status == "Chờ xác nhận")
                                                    {
                                                        <li><a class="dropdown-item" href="#" onclick="updateBookingStatus(@booking.Id, 'Đã xác nhận')">
                                                            <i class="fas fa-check me-2"></i>Xác nhận</a></li>
                                                    }
                                                    @if (booking.Status == "Đã xác nhận")
                                                    {
                                                        <li><a class="dropdown-item" href="#" onclick="updateBookingStatus(@booking.Id, 'Hoàn thành')">
                                                            <i class="fas fa-check-double me-2"></i>Hoàn thành</a></li>
                                                    }
                                                    @if (booking.Status != "Hoàn thành" && booking.Status != "Đã hủy")
                                                    {
                                                        <li><a class="dropdown-item" href="#" onclick="showCancelModal(@booking.Id)">
                                                            <i class="fas fa-times me-2"></i>Hủy</a></li>
                                                    }
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Tình trạng phòng</h5>
                    <a href="/Admin/Rooms" class="btn btn-sm btn-primary">Quản lý phòng</a>
                </div>
                <div class="card-body">
                    <div class="room-status-chart mb-4">
                        <canvas id="roomStatusChart" height="200"></canvas>
                    </div>
                    <div class="room-status-summary">
                        <div class="row">
                            <div class="col-6">
                                <div class="status-item">
                                    <div class="status-icon available">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                    <div class="status-details">
                                        <h4>@Model.AvailableRooms</h4>
                                        <p>Phòng trống</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="status-item">
                                    <div class="status-icon occupied">
                                        <i class="fas fa-bed"></i>
                                    </div>
                                    <div class="status-details">
                                        <h4>@Model.OccupiedRooms</h4>
                                        <p>Phòng đã đặt</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="status-item">
                                    <div class="status-icon cleaning">
                                        <i class="fas fa-broom"></i>
                                    </div>
                                    <div class="status-details">
                                        <h4>@Model.CleaningRooms</h4>
                                        <p>Đang dọn dẹp</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="status-item">
                                    <div class="status-icon maintenance">
                                        <i class="fas fa-tools"></i>
                                    </div>
                                    <div class="status-details">
                                        <h4>@Model.MaintenanceRooms</h4>
                                        <p>Bảo trì</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Row -->
    <div class="row">
        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Đánh giá gần đây</h5>
                    <a href="/Admin/Reviews" class="btn btn-sm btn-primary">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="reviews-list">
                        @foreach (var review in Model.RecentReviews)
                        {
                            <div class="review-item">
                                <div class="review-header">
                                    <div class="reviewer-info">
                                        <div class="reviewer-avatar">
                                            <span>@review.CustomerInitials</span>
                                        </div>
                                        <div>
                                            <h6>@review.CustomerName</h6>
                                            <div class="review-date">@review.ReviewDate.ToString("dd/MM/yyyy")</div>
                                        </div>
                                    </div>
                                    <div class="review-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="@(i <= review.Rating ? "fas" : "far") fa-star"></i>
                                        }
                                    </div>
                                </div>
                                <div class="review-room">@review.RoomName</div>
                                <div class="review-content">
                                    <p>@review.Comment</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Khách hàng hàng đầu</h5>
                    <a href="/Admin/Customers" class="btn btn-sm btn-primary">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Khách hàng</th>
                                    <th>Đặt phòng</th>
                                    <th>Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.TopCustomers)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="customer-avatar me-2">
                                                    <span>@customer.Initials</span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@customer.Name</h6>
                                                    <small class="text-muted">@customer.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@customer.TotalBookings</td>
                                        <td>@customer.TotalSpent.ToString("N0") VNĐ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Thông báo gần đây</h5>
                </div>
                <div class="card-body p-0">
                    <div class="notifications-list">
                        @foreach (var notification in Model.RecentNotifications)
                        {
                            <a href="#" class="notification-item @(notification.IsUnread ? "unread" : "")">
                                <div class="notification-icon @(notification.Type switch {
                                    "booking" => "bg-primary",
                                    "review" => "bg-warning",
                                    "cancel" => "bg-danger",
                                    "success" => "bg-success",
                                    "user" => "bg-info",
                                    _ => "bg-secondary"
                                })">
                                    <i class="fas @(notification.Type switch {
                                        "booking" => "fa-calendar-check",
                                        "review" => "fa-star",
                                        "cancel" => "fa-times-circle",
                                        "success" => "fa-check-circle",
                                        "user" => "fa-user-plus",
                                        _ => "fa-bell"
                                    })"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">@notification.Title</div>
                                    <div class="notification-text">@notification.Message</div>
                                    <div class="notification-time">@FormatTimeAgo(notification.Time)</div>
                                </div>
                            </a>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Admin/Notifications" class="btn btn-sm btn-outline-primary">Xem tất cả thông báo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize date range picker
            $('#daterange').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,
                locale: {
                    format: 'MM/YYYY'
                }
            });

            // Revenue Chart
            const revenueCtx = document.getElementById('revenueChart').getContext('2d');
            const revenueChart = new Chart(revenueCtx, {
                type: 'bar',
                data: {
                    labels: @Json.Serialize(Model.RevenueLabels),
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: @Json.Serialize(Model.MonthlyRevenue),
                        backgroundColor: 'rgba(58, 110, 165, 0.7)',
                        borderColor: 'rgba(58, 110, 165, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value) {
                                    return new Intl.NumberFormat('vi-VN').format(value) + ' VNĐ';
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    responsive: true,
                    maintainAspectRatio: false
                }
            });

            // Room Types Pie Chart
            const roomTypeData = @Json.Serialize(Model.RoomTypeBookings);
            const roomTypeLabels = Object.keys(roomTypeData);
            const roomTypeValues = Object.values(roomTypeData);

            const roomTypeCtx = document.getElementById('roomTypeChart').getContext('2d');
            const roomTypeChart = new Chart(roomTypeCtx, {
                type: 'doughnut',
                data: {
                    labels: roomTypeLabels,
                    datasets: [{
                        data: roomTypeValues,
                        backgroundColor: [
                            'rgba(58, 110, 165, 0.8)',
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(246, 194, 62, 0.8)',
                            'rgba(231, 74, 59, 0.8)',
                            'rgba(78, 115, 223, 0.8)'
                        ],
                        borderColor: '#ffffff',
                        borderWidth: 2
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20
                            }
                        }
                    },
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%'
                }
            });

            // Room Status Chart
            const roomStatusCtx = document.getElementById('roomStatusChart').getContext('2d');
            const roomStatusChart = new Chart(roomStatusCtx, {
                type: 'pie',
                data: {
                    labels: ['Trống', 'Đã đặt', 'Đang dọn dẹp', 'Bảo trì'],
                    datasets: [{
                        data: [
                            @Model.AvailableRooms,
                            @Model.OccupiedRooms,
                            @Model.CleaningRooms,
                            @Model.MaintenanceRooms
                        ],
                        backgroundColor: [
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(246, 194, 62, 0.8)',
                            'rgba(54, 185, 204, 0.8)',
                            'rgba(231, 74, 59, 0.8)'
                        ],
                        borderColor: '#ffffff',
                        borderWidth: 2
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        });

        function updateBookingStatus(bookingId, status) {
            if (confirm(`Bạn có chắc muốn cập nhật trạng thái đặt phòng thành "${status}"?`)) {
                fetch('/Admin/UpdateBookingStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${bookingId}&status=${status}`
                }).then(() => {
                    window.location.reload();
                });
            }
        }

        function showCancelModal(bookingId) {
            // Implement cancel booking modal
            const reason = prompt("Nhập lý do hủy đặt phòng:");
            if (reason) {
                fetch('/Admin/CancelBooking', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${bookingId}&cancelReason=${encodeURIComponent(reason)}`
                }).then(() => {
                    window.location.reload();
                });
            }
        }
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
}

@functions {
    string FormatTimeAgo(DateTime time)
    {
        var span = DateTime.Now - time;

        if (span.TotalMinutes < 2)
            return "Vừa xong";
        if (span.TotalMinutes < 60)
            return $"{(int)span.TotalMinutes} phút trước";
        if (span.TotalHours < 24)
            return $"{(int)span.TotalHours} giờ trước";
        if (span.TotalDays < 7)
            return $"{(int)(span.TotalDays / 7)} tuần trước";
        if (span.TotalDays < 30)
            return $"{(int)(span.TotalDays / 30)} tháng trước";
        if (span.TotalDays < 365)
            return $"{(int)(span.TotalDays / 365)} năm trước";
        return $"{(int)(span.TotalDays / 365)} năm trước";
    }
}