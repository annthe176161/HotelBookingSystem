@model HotelBookingSystem.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-container">
    <div class="row">
        <div class="col-lg-6 login-banner d-none d-lg-block">
            <div class="overlay"></div>
            <div class="banner-content">
                <h1>Luxury Hotel</h1>
                <p>Trải nghiệm dịch vụ 5 sao tại khách sạn sang trọng hàng đầu Việt Nam</p>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 login-form-container">
            <div class="login-form-wrapper">
                <div class="login-header text-center">
                    <a href="/" class="login-logo">
                        <i class="fas fa-hotel"></i>
                    </a>
                    <h2>Chào mừng trở lại</h2>
                    <p>Đăng nhập để truy cập tài khoản của bạn</p>
                </div>

                <form asp-action="Login" asp-controller="Account" method="post" class="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" required />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu" required />
                        <label asp-for="Password">Mật khẩu</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    </div>

                    <div class="login-links">
                        <p class="mb-0">
                            <a asp-action="ForgotPassword" asp-controller="Account">Quên mật khẩu?</a>
                        </p>
                    </div>
                </form>

                <div class="login-divider">
                    <span>hoặc</span>
                </div>

                <div class="social-login">
                    <button class="btn btn-outline-secondary btn-social">
                        <i class="fab fa-google"></i> Đăng nhập với Google
                    </button>
                    <button class="btn btn-outline-secondary btn-social">
                        <i class="fab fa-facebook-f"></i> Đăng nhập với Facebook
                    </button>
                </div>

                <div class="register-link text-center">
                    <p>Chưa có tài khoản? <a asp-action="Register" asp-controller="Account">Đăng ký ngay</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/login.js" asp-append-version="true"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}