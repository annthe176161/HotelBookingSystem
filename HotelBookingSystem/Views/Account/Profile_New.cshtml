@model HotelBookingSystem.ViewModels.Account.ProfileViewModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="profile-container">
    <div class="container py-5">
        
        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h1 class="h3 mb-1">Thông tin tài khoản</h1>
                        <p class="text-muted mb-0">Quản lý thông tin cá nhân của bạn</p>
                    </div>
                    <div>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Content -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        
                        <!-- Avatar Section -->
                        <div class="text-center mb-4">
                            <div class="profile-avatar-container d-inline-block position-relative">
                                @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                                {
                                    <img src="@Model.AvatarUrl" alt="Avatar" class="profile-avatar rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="profile-avatar-placeholder rounded-circle d-flex align-items-center justify-content-center" style="width: 120px; height: 120px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; font-size: 2rem; font-weight: bold;">
                                        <span>@(Model.FirstName?.FirstOrDefault())@(Model.LastName?.FirstOrDefault())</span>
                                    </div>
                                }
                                <div class="profile-avatar-edit position-absolute" style="bottom: 5px; right: 5px;">
                                    <label for="avatar-upload" class="btn btn-sm btn-primary rounded-circle p-2" style="width: 40px; height: 40px; cursor: pointer;">
                                        <i class="fas fa-camera"></i>
                                    </label>
                                    <input type="file" id="avatar-upload" class="d-none" accept="image/*" />
                                </div>
                            </div>
                            <div class="mt-3">
                                <h3 class="mb-1">@Model.FirstName @Model.LastName</h3>
                                <p class="text-muted mb-0">
                                    <i class="fas fa-envelope me-2"></i>@Model.Email
                                </p>
                                <small class="text-muted">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    Thành viên từ @Model.CreatedAt.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                        </div>

                        <!-- Profile Form -->
                        <div class="profile-form-section">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h4 class="mb-0">
                                    <i class="fas fa-user-edit me-2 text-primary"></i>
                                    Thông tin cá nhân
                                </h4>
                                <button class="btn btn-outline-primary btn-sm" id="edit-profile-btn">
                                    <i class="fas fa-pencil-alt me-1"></i>Chỉnh sửa
                                </button>
                            </div>

                            <form asp-action="Profile" method="post" id="profile-form" class="needs-validation" novalidate>
                                @Html.AntiForgeryToken()
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="FirstName" class="form-label fw-semibold">
                                            <i class="fas fa-user me-1 text-muted"></i>Tên
                                        </label>
                                        <input asp-for="FirstName" type="text" class="form-control" disabled required>
                                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="LastName" class="form-label fw-semibold">
                                            <i class="fas fa-user me-1 text-muted"></i>Họ
                                        </label>
                                        <input asp-for="LastName" type="text" class="form-control" disabled required>
                                        <span asp-validation-for="LastName" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Email" class="form-label fw-semibold">
                                            <i class="fas fa-envelope me-1 text-muted"></i>Email
                                        </label>
                                        <input asp-for="Email" type="email" class="form-control" disabled required readonly>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                        <div class="form-text">Email không thể thay đổi</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="PhoneNumber" class="form-label fw-semibold">
                                            <i class="fas fa-phone me-1 text-muted"></i>Số điện thoại
                                        </label>
                                        <input asp-for="PhoneNumber" type="tel" class="form-control" disabled>
                                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Birthdate" class="form-label fw-semibold">
                                            <i class="fas fa-birthday-cake me-1 text-muted"></i>Ngày sinh
                                        </label>
                                        <input asp-for="Birthdate" type="date" class="form-control" disabled>
                                        <span asp-validation-for="Birthdate" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Gender" class="form-label fw-semibold">
                                            <i class="fas fa-venus-mars me-1 text-muted"></i>Giới tính
                                        </label>
                                        <select asp-for="Gender" class="form-select" disabled>
                                            <option value="">-- Chọn giới tính --</option>
                                            <option value="male">Nam</option>
                                            <option value="female">Nữ</option>
                                            <option value="other">Khác</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label fw-semibold">
                                        <i class="fas fa-home me-1 text-muted"></i>Địa chỉ
                                    </label>
                                    <input asp-for="Address" type="text" class="form-control" disabled placeholder="Nhập địa chỉ của bạn">
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="City" class="form-label fw-semibold">
                                            <i class="fas fa-city me-1 text-muted"></i>Thành phố
                                        </label>
                                        <input asp-for="City" type="text" class="form-control" disabled placeholder="Thành phố">
                                        <span asp-validation-for="City" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="State" class="form-label fw-semibold">
                                            <i class="fas fa-map-marker-alt me-1 text-muted"></i>Tỉnh/Thành
                                        </label>
                                        <input asp-for="State" type="text" class="form-control" disabled placeholder="Tỉnh/Thành">
                                        <span asp-validation-for="State" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="ZipCode" class="form-label fw-semibold">
                                            <i class="fas fa-mail-bulk me-1 text-muted"></i>Mã bưu chính
                                        </label>
                                        <input asp-for="ZipCode" type="text" class="form-control" disabled placeholder="Mã bưu chính">
                                        <span asp-validation-for="ZipCode" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-flex justify-content-end gap-2 mt-4 profile-action-buttons" style="display: none !important;">
                                    <button type="button" class="btn btn-outline-secondary" id="cancel-edit-btn">
                                        <i class="fas fa-times me-1"></i>Hủy
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>Lưu thay đổi
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS for Profile Page -->
<style>
.profile-container {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
}

.profile-avatar-container:hover .profile-avatar-edit {
    opacity: 1;
}

.profile-avatar-edit {
    opacity: 0.8;
    transition: opacity 0.3s ease;
}

.profile-avatar-edit:hover {
    opacity: 1;
}

.card {
    border: none;
    border-radius: 15px;
}

.form-control:disabled {
    background-color: #f8f9fa;
    opacity: 0.8;
}

.form-control:not(:disabled) {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
    transform: translateY(-1px);
}

.btn-outline-primary:hover {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: transparent;
}

.form-label {
    color: #495057;
    margin-bottom: 0.5rem;
}

.text-primary {
    color: #667eea !important;
}
</style>

@section Scripts {
    <script src="~/js/profile.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
