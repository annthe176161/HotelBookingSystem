@model HotelBookingSystem.ViewModels.Booking.CustomerBookingsViewModel
@{
    var title = ViewData["Title"] = "Đặt phòng của tôi" as string;
}
@section Styles {
    <link rel="stylesheet" href="~/css/review-form.css" />
}
<link rel="stylesheet" href="~/css/booking-list.css" asp-append-version="true" />

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="page-title">
                    <i class="fas fa-calendar-alt me-3"></i>
                    Đặt phòng của tôi
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Đặt phòng của tôi</li>
                    </ol>
                </nav>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Rooms", "Home")" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Đặt phòng mới
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="container py-4">
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card stats-primary">
                <div class="stats-icon">
                    <i class="fas fa-calendar"></i>
                </div>
                <div class="stats-content">
                    <h3>@Model.TotalBookings</h3>
                    <p>Tổng số đặt phòng</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card stats-success">
                <div class="stats-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stats-content">
                    <h3>@Model.CompletedBookings</h3>
                    <p>Đã hoàn thành</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card stats-warning">
                <div class="stats-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stats-content">
                    <h3>@Model.PendingBookings</h3>
                    <p>Đang chờ</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stats-card stats-danger">
                <div class="stats-icon">
                    <i class="fas fa-times-circle"></i>
                </div>
                <div class="stats-content">
                    <h3>@Model.CancelledBookings</h3>
                    <p>Đã hủy</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-search me-2"></i>
                Tìm kiếm và lọc
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="searchTerm" class="form-label">Tìm kiếm</label>
                        <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                            value="@Model.SearchTerm"
                            placeholder="Tìm kiếm theo tên phòng, loại phòng hoặc mã đặt phòng...">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="status" class="form-label">Trạng thái đặt phòng</label>
                        <select class="form-select" id="status" name="status">
                            <option value="">Tất cả trạng thái</option>
                            @foreach (var bookingStatus in ViewBag.BookingStatuses)
                            {
                                <option value="@bookingStatus.Name" selected="@(Model.Status == bookingStatus.Name)">
                                    @bookingStatus.Name
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="roomType" class="form-label">Loại phòng</label>
                        <select class="form-select" id="roomType" name="roomType">
                            <option value="">Tất cả loại phòng</option>
                            @foreach (var roomType in ViewBag.RoomTypes)
                            {
                                <option value="@roomType" selected="@(Model.RoomType == roomType)">
                                    @roomType
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="paymentStatus" class="form-label">Trạng thái thanh toán</label>
                        <select class="form-select" id="paymentStatus" name="paymentStatus">
                            <option value="">Tất cả</option>
                            @foreach (var paymentStatus in ViewBag.PaymentStatuses)
                            {
                                <option value="@paymentStatus.Name" selected="@(Model.PaymentStatus == paymentStatus.Name)">
                                    @paymentStatus.Name
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-2"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.Status) ||
                                !string.IsNullOrEmpty(Model.RoomType) || !string.IsNullOrEmpty(Model.PaymentStatus))
                {
                    <div class="row">
                        <div class="col-12">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times me-1"></i>Xóa bộ lọc
                            </a>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Bookings List -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>
                Danh sách đặt phòng
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Bookings.Any())
            {
                <div class="row">
                    @foreach (var booking in Model.Bookings)
                    {
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="booking-card">
                                <!-- Room Image -->
                                <div class="booking-image">
                                    <img src="@(string.IsNullOrEmpty(booking.RoomImageUrl) ? "https://via.placeholder.com/350x200?text=Hotel+Room" : booking.RoomImageUrl)"
                                        alt="@booking.RoomName">
                                    <div class="booking-status">
                                        <span class="status-badge status-@booking.StatusColor.ToLower()">@booking.Status</span>
                                    </div>
                                    <div class="booking-number">
                                        <span class="number-badge">@booking.FormattedBookingNumber</span>
                                    </div>
                                </div>

                                <div class="booking-content">
                                    <!-- Room Info -->
                                    <h5 class="room-name">@booking.RoomName</h5>
                                    <p class="room-type">@booking.RoomType</p>

                                    <!-- Booking Details -->
                                    <div class="booking-dates">
                                        <div class="date-item">
                                            <i class="fas fa-calendar-check text-success"></i>
                                            <div>
                                                <strong>Nhận phòng</strong>
                                                <span>@booking.FormattedCheckIn</span>
                                            </div>
                                        </div>
                                        <div class="date-item">
                                            <i class="fas fa-calendar-times text-danger"></i>
                                            <div>
                                                <strong>Trả phòng</strong>
                                                <span>@booking.FormattedCheckOut</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="booking-info">
                                        <div class="info-item">
                                            <i class="fas fa-moon text-info"></i>
                                            <span><strong>@booking.NightCount</strong> đêm</span>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-users text-secondary"></i>
                                            <span><strong>@booking.Guests</strong> khách</span>
                                        </div>
                                    </div>

                                    <!-- Price and Payment -->
                                    <div class="price-section">
                                        <div class="total-price">
                                            <span class="price-label">Tổng tiền:</span>
                                            <span class="price-value">@booking.FormattedTotalPrice</span>
                                        </div>
                                        <div class="payment-status">
                                            <span class="payment-badge payment-@(booking.PaymentStatus.ToLower())">
                                                @booking.PaymentStatus
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Booking Date -->
                                    <div class="booking-date">
                                        <i class="fas fa-clock"></i>
                                        <span>Đặt lúc: @booking.FormattedCreatedDate</span>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="booking-actions">
                                        @if (booking.IsUpcoming)
                                        {
                                            <span class="status-info status-upcoming">Sắp tới</span>
                                        }
                                        else if (booking.IsActive)
                                        {
                                            <span class="status-info status-active">Đang diễn ra</span>
                                        }
                                        else if (booking.IsPast && booking.Status == "Completed")
                                        {
                                            <span class="status-info status-completed">Đã kết thúc</span>
                                        }

                                        <div class="action-buttons">
                                            @if (booking.CanCancel)
                                            {
                                                <button class="btn btn-outline-danger btn-sm" onclick="confirmCancel(@booking.Id)">
                                                    <i class="fas fa-times"></i> Hủy đặt phòng
                                                </button>
                                            }

                                            @if (booking.CanReview)
                                            {
                                                <a href="#" class="btn btn-outline-warning btn-sm" onclick="openPopup(@booking.Id)">
                                                    <i class="fas fa-star"></i> Đánh giá
                                                </a>
                                            }

                                            @if (booking.HasReview)
                                            {
                                                <div class="alert alert-info alert-sm mb-2" style="padding: 5px 10px; font-size: 12px; margin-bottom: 5px !important;">
                                                    <i class="fas fa-check-circle"></i> Bạn đã đánh giá phòng này rồi
                                                </div>
                                                <a href="@Url.Action("EditReview", new { bookingId = booking.Id })"
                                                    class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-edit"></i> Sửa đánh giá
                                                </a>
                                            }

                                            <a href="@Url.Action("Details", new { id = booking.Id })"
                                                class="btn btn-primary btn-sm">
                                                <i class="fas fa-eye"></i> Chi tiết
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-calendar-times"></i>
                    </div>
                    <h4>Không có đặt phòng nào</h4>
                    <p>Bạn chưa có đặt phòng nào. Hãy khám phá các phòng của chúng tôi!</p>
                    <a href="@Url.Action("Index", "Rooms")" class="btn btn-primary">
                        <i class="fas fa-bed me-2"></i>Xem phòng
                    </a>
                </div>
            }
        </div>
    </div>
    <form method="post" asp-action="Index" id="reviewForm" onsubmit="return validateReview()">
        @Html.AntiForgeryToken()
        <div id="reviewPopup" class="popup-overlay" style="display: none;">
            <div class="popup-content">
                <div class="popup-header">
                    <h5>Đánh giá dịch vụ</h5>
                    <span class="close-btn" onclick="closePopup()">&times;</span>
                </div>
                <div class="popup-body">
                    <!-- Hidden inputs để truyền dữ liệu -->
                    <input type="hidden" name="BookingId" id="BookingId">
                    <input type="hidden" name="Rating" id="ratingValue" value="0">

                    <div class="rating-stars">
                        <i onclick="setRating(1)" class="fa-solid fa-star star-item"></i>
                        <i onclick="setRating(2)" class="fa-solid fa-star star-item"></i>
                        <i onclick="setRating(3)" class="fa-solid fa-star star-item"></i>
                        <i onclick="setRating(4)" class="fa-solid fa-star star-item"></i>
                        <i onclick="setRating(5)" class="fa-solid fa-star star-item"></i>
                    </div>
                    <p id="ratingError"
                        style="color: red; font-size: 14px; display: none; margin-top: 4px; text-align: center;">
                        Vui lòng chọn số sao đánh giá
                    </p>

                    <textarea name="Comment" id="comment" placeholder="Nhận xét của bạn..." rows="4"></textarea>

                    <div class="popup-buttons">
                        <button type="button" onclick="closePopup()">Hủy</button>
                        <button type="submit" onclick="logSubmitInfo()">Gửi đánh giá</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Hiển thị thông báo Review -->
@if (TempData["ReviewSuccess"] != null)
{
        <div id="notification" class="notification success">
            <i class="fas fa-check-circle"></i>
            @TempData["ReviewSuccess"]
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                showNotification();
            });
        </script>
}

@if (TempData["ReviewError"] != null)
{
        <div id="notification" class="notification error">
            <i class="fas fa-exclamation-circle"></i>
            @TempData["ReviewError"]
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                showNotification();
            });
        </script>
}

@section Scripts {
        <script>
            function confirmCancel(bookingId) {
                if (confirm('Bạn có chắc chắn muốn hủy đặt phòng này không?')) {
                    // Implement cancel booking logic here
                    console.log('Cancel booking:', bookingId);
                    alert('Chức năng hủy đặt phòng sẽ được implement sau.');
                }
            }
        </script>
        <script src="~/js/review-form.js?v=@DateTime.Now.Ticks"></script>
}
