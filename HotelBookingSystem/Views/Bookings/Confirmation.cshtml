@model HotelBookingSystem.Models.Booking
@{
    ViewData["Title"] = "Xác nhận đặt phòng";
}

<link rel="stylesheet" href="~/css/booking-confirmation.css" asp-append-version="true" />

<!-- Confirmation Banner -->
<div class="confirmation-banner">
    <div class="overlay"></div>
    <div class="container">
        <div class="banner-content text-center">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1>Đặt phòng thành công!</h1>
            <p class="lead">Cảm ơn bạn đã tin tướng và lựa chọn dịch vụ của chúng tôi</p>
        </div>
    </div>
</div>

<div class="confirmation-container">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Booking Information Card -->
                <div class="booking-info-card mb-4">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Thông tin đặt phòng
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="booking-id-section mb-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <strong>Mã đặt phòng:</strong>
                                        <span class="booking-number">#BK@Model.Id.ToString().PadLeft(6, '0')</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <strong>Ngày đặt:</strong>
                                        <span>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <strong>Trạng thái:</strong>
                                        <span class="badge bg-warning text-dark">@Model.BookingStatus.Name</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Room Information -->
                        <div class="room-info-section mb-4">
                            <h5 class="section-title">Thông tin phòng</h5>
                            <div class="room-card">
                                <div class="row">
                                    <div class="col-md-4">
                                        <img src="@Model.Room.ImageUrl" alt="@Model.Room.Name" class="room-image">
                                    </div>
                                    <div class="col-md-8">
                                        <h6 class="room-name">@Model.Room.Name</h6>
                                        <p class="room-type">@Model.Room.RoomType</p>
                                        <div class="room-details">
                                            <div class="detail-item">
                                                <i class="fas fa-users me-2"></i>
                                                @Model.Guests người
                                            </div>
                                            <div class="detail-item">
                                                <i class="fas fa-bed me-2"></i>
                                                Sức chứa tối đa: @Model.Room.Capacity người
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Stay Information -->
                        <div class="stay-info-section mb-4">
                            <h5 class="section-title">Thông tin lưu trú</h5>
                            <div class="stay-details">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="date-item">
                                            <div class="date-label">Ngày nhận phòng</div>
                                            <div class="date-value">
                                                <i class="fas fa-calendar-check me-2"></i>
                                                @Model.CheckIn.ToString("dddd, dd/MM/yyyy")
                                            </div>
                                            <div class="time-note">Giờ nhận phòng: 14:00</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="date-item">
                                            <div class="date-label">Ngày trả phòng</div>
                                            <div class="date-value">
                                                <i class="fas fa-calendar-times me-2"></i>
                                                @Model.CheckOut.ToString("dddd, dd/MM/yyyy")
                                            </div>
                                            <div class="time-note">Giờ trả phòng: 12:00</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="nights-count">
                                    <i class="fas fa-moon me-2"></i>
                                    @((Model.CheckOut - Model.CheckIn).Days) đêm
                                </div>
                            </div>
                        </div>

                        <!-- Payment Information -->
                        <div class="payment-info-section">
                            <h5 class="section-title">Thông tin thanh toán</h5>
                            <div class="payment-summary">
                                <div class="price-breakdown">
                                    <div class="price-item">
                                        <span>Giá phòng (@((Model.CheckOut - Model.CheckIn).Days) đêm)</span>
                                        <span>@Model.TotalPrice.ToString("N0") VNĐ</span>
                                    </div>
                                    <div class="price-total">
                                        <span><strong>Tổng cộng</strong></span>
                                        <span><strong>@Model.TotalPrice.ToString("N0") VNĐ</strong></span>
                                    </div>
                                </div>
                                <div class="payment-method">
                                    <i class="fas fa-hotel me-2"></i>
                                    <span>Thanh toán tại khách sạn</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Important Information -->
                <div class="important-info-card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Thông tin quan trọng
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="info-list">
                            <div class="info-item">
                                <i class="fas fa-clock me-2"></i>
                                <div>
                                    <strong>Thời gian nhận/trả phòng:</strong>
                                    <p>Nhận phòng: 14:00 | Trả phòng: 12:00</p>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-id-card me-2"></i>
                                <div>
                                    <strong>Giấy tờ cần thiết:</strong>
                                    <p>Vui lòng mang theo CMND/CCCD hoặc hộ chiếu khi nhận phòng</p>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-ban me-2"></i>
                                <div>
                                    <strong>Chính sách hủy phòng:</strong>
                                    <p>Miễn phí hủy phòng trước 24 giờ so với thời gian nhận phòng</p>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-phone me-2"></i>
                                <div>
                                    <strong>Liên hệ khách sạn:</strong>
                                    <p>Hotline: +84 123 456 789 | Email: info@luxuryhotel.com</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons text-center">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary me-3">
                        <i class="fas fa-home me-2"></i>
                        Về trang chủ
                    </a>
                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>
                        Đặt phòng khác
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto print functionality
        $(document).ready(function() {
            // Print button functionality
            $('#printConfirmation').click(function() {
                window.print();
            });

            // Email confirmation functionality
            $('#emailConfirmation').click(function() {
                // This would typically send an AJAX request to email the confirmation
                alert('Xác nhận đặt phòng đã được gửi qua email!');
            });
        });
    </script>
}
