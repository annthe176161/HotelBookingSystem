                    <li class="sidebar-item">
                        <a href="/Admin/Reviews" class="sidebar-link">
                            <i class="fas fa-star"></i>
                            <span>Đánh giá</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="/Admin/Promotions" class="sidebar-link">
                            <i class="fas fa-tags"></i>
                            <span>Khuyến mãi</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#reports" class="sidebar-link has-dropdown" data-bs-toggle="collapse">
                            <i class="fas fa-chart-bar"></i>
                            <span>Báo cáo</span>
                        </a>
                        <ul class="collapse" id="reports">
                            <li><a href="/Admin/Reports/Revenue">Doanh thu</a></li>
                            <li><a href="/Admin/Reports/Occupancy">Công suất</a></li>
                            <li><a href="/Admin/Reports/Customers">Khách hàng</a></li>
                        </ul>
