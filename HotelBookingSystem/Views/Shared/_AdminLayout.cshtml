                    <button class="btn sidebar-toggle d-none d-lg-block" id="desktop-sidebar-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>

                <div class="topbar-nav">
                    <ul class="navbar-nav flex-row">
                        <!-- Thông báo dropdown -->
