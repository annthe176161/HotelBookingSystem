<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <div class="admin-sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/Admin/Dashboard" class="sidebar-brand">
                    <i class="fas fa-hotel"></i>
                    <span>Luxury Hotel</span>
                </a>
            </div>
            <div class="sidebar-content">
                <ul class="sidebar-nav">
                    <li class="sidebar-item">
                        <a href="/Admin/Dashboard" class="sidebar-link active">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="/Admin/Bookings" class="sidebar-link">
                            <i class="fas fa-calendar-check"></i>
                            <span>Đặt phòng</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="/Admin/Rooms" class="sidebar-link">
                            <i class="fas fa-bed"></i>
                            <span>Quản lý phòng</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="/Admin/Users" class="sidebar-link">
                            <i class="fas fa-users"></i>
                            <span>Khách hàng</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="/Admin/Reviews" class="sidebar-link">
                            <i class="fas fa-star"></i>
                            <span>Đánh giá</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="/Admin/Promotions" class="sidebar-link">
                            <i class="fas fa-tags"></i>
                            <span>Khuyến mãi</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#reports" class="sidebar-link has-dropdown" data-bs-toggle="collapse">
                            <i class="fas fa-chart-bar"></i>
                            <span>Báo cáo</span>
                        </a>
                        <ul class="collapse" id="reports">
                            <li><a href="/Admin/Reports/Revenue">Doanh thu</a></li>
                            <li><a href="/Admin/Reports/Occupancy">Công suất</a></li>
                            <li><a href="/Admin/Reports/Customers">Khách hàng</a></li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="/Admin/Settings" class="sidebar-link">
                            <i class="fas fa-cog"></i>
                            <span>Cài đặt</span>
                        </a>
                    </li>
                </ul>

                <div class="sidebar-footer">
                    <a href="/" class="btn btn-sm btn-outline-light">
                        <i class="fas fa-globe"></i> Xem website
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Topbar -->
            <nav class="admin-topbar">
                <div class="topbar-left d-flex align-items-center">
                    <!-- Không có hamburger menu và title nữa -->
                </div>

                <div class="topbar-right">
                    <ul class="navbar-nav d-flex flex-row align-items-center">
                        <!-- Notifications -->
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle" href="#" id="notificationsDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false" title="Thông báo">
                                <i class="fas fa-bell"></i>
                                <span class="notification-badge">3</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end notification-dropdown"
                                aria-labelledby="notificationsDropdown">
                                <div class="dropdown-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Thông báo</span>
                                        <span class="badge bg-light text-primary">3 mới</span>
                                    </div>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item notification-item" href="#">
                                    <div class="notification-icon bg-primary">
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                    <div class="notification-content">
                                        <div class="notification-text">Đặt phòng mới từ Nguyễn Văn A</div>
                                        <div class="notification-time">2 phút trước</div>
                                    </div>
                                </a>
                                <a class="dropdown-item notification-item" href="#">
                                    <div class="notification-icon bg-warning">
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <div class="notification-content">
                                        <div class="notification-text">Đánh giá mới 5 sao từ Nguyễn Thị Thanh</div>
                                        <div class="notification-time">3 giờ trước</div>
                                    </div>
                                </a>
                                <a class="dropdown-item notification-item" href="#">
                                    <div class="notification-icon bg-danger">
                                        <i class="fas fa-times-circle"></i>
                                    </div>
                                    <div class="notification-content">
                                        <div class="notification-text">Vũ Minh E đã hủy đặt phòng</div>
                                        <div class="notification-time">1 giờ trước</div>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-center text-muted" href="/Admin/Notifications">
                                    Xem tất cả thông báo
                                </a>
                            </div>
                        </li>

                        <!-- Messages -->
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle" href="#" id="messagesDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false" title="Tin nhắn">
                                <i class="fas fa-envelope"></i>
                                <span class="notification-badge">7</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end notification-dropdown"
                                aria-labelledby="messagesDropdown">
                                <div class="dropdown-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Tin nhắn</span>
                                        <span class="badge bg-light text-primary">7 mới</span>
                                    </div>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item message-item" href="#">
                                    <div class="user-avatar">NT</div>
                                    <div class="message-content">
                                        <div class="message-sender">Nguyễn Thanh</div>
                                        <div class="message-text">Tôi cần hỗ trợ về việc đặt phòng...</div>
                                        <div class="message-time">58 phút trước</div>
                                    </div>
                                </a>
                                <a class="dropdown-item message-item" href="#">
                                    <div class="user-avatar">TL</div>
                                    <div class="message-content">
                                        <div class="message-sender">Trần Linh</div>
                                        <div class="message-text">Tôi muốn đặt thêm dịch vụ spa...</div>
                                        <div class="message-time">3 giờ trước</div>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-center text-muted" href="/Admin/Messages">
                                    Xem tất cả tin nhắn
                                </a>
                            </div>
                        </li>

                        <!-- User Profile -->
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false" title="Tài khoản">
                                <i class="fas fa-user-circle"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end user-dropdown-menu"
                                aria-labelledby="userDropdown">
                                <div class="dropdown-header user-header">
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar-header">A</div>
                                        <div class="user-details">
                                            <div class="user-name-header">Admin</div>
                                            <div class="user-role">Quản trị viên</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Admin/Profile">
                                    <i class="fas fa-user me-2"></i>Hồ sơ
                                </a>
                                <a class="dropdown-item" href="/Admin/Settings">
                                    <i class="fas fa-cogs me-2"></i>Cài đặt
                                </a>
                                <a class="dropdown-item" href="/Admin/ActivityLog">
                                    <i class="fas fa-list me-2"></i>Nhật ký hoạt động
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-controller="Account" asp-action="Logout" method="post" style="margin: 0;">
                                    <button type="submit" class="dropdown-item text-danger"
                                        style="border: none; background: none; width: 100%; text-align: left;">
                                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="admin-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <script>
        // Sidebar navigation highlighting
        document.addEventListener('DOMContentLoaded', function () {
            // Highlight active navigation item
            const currentPath = window.location.pathname;
            const sidebarLinks = document.querySelectorAll('.sidebar-link');

            sidebarLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');

                    // Expand parent dropdown if in one
                    const parentDropdown = link.closest('.collapse');
                    if (parentDropdown) {
                        parentDropdown.classList.add('show');
                        const parentLink = document.querySelector(`[data-bs-toggle="collapse"][href="#${parentDropdown.id}"]`);
                        if (parentLink) {
                            parentLink.classList.add('active');
                        }
                    }
                } else {
                    link.classList.remove('active');
                }
            });
        });
    </script>
</body>

</html>