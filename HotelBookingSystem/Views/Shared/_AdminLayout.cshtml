                            </div>
                        </li>

                        <!-- Dropdown hồ sơ người dùng -->
                        <li class="nav-item dropdown ms-2">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="d-none d-lg-inline me-2 text-gray-600">Admin</span>
                                <div class="avatar-circle d-flex align-items-center justify-content-center bg-primary text-white" style="width: 32px; height: 32px; font-weight: 500;">A</div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end shadow py-0" aria-labelledby="userDropdown" style="width: 220px;">
                                <div class="dropdown-header bg-primary text-white py-2">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-white text-primary me-2 d-flex align-items-center justify-content-center" style="width: 36px; height: 36px; font-weight: 500;">A</div>
                                        <div>
                                            <div class="fw-bold">Admin</div>
                                            <div class="small">Quản trị viên</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-divider my-0"></div>
                                <a class="dropdown-item py-2" href="/Admin/Profile">
                                    <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>
                                    Hồ sơ
                                </a>
                                <a class="dropdown-item py-2" href="/Admin/Settings">
                                    <i class="fas fa-cogs fa-sm fa-fw me-2 text-gray-400"></i>
                                    Cài đặt
                                </a>
