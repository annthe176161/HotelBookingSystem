<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelBookingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelBookingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rooms-list.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <!-- Top Header with contact info and social media -->
        <div class="top-header d-none d-md-block">
            <div class="container d-flex justify-content-between">
                <div>
                    <i class="fas fa-phone-alt me-2"></i> Hotline: 1900 1234
                    <i class="fas fa-envelope ms-4 me-2"></i> info@luxuryhotel.com
                </div>
                <div>
                    <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-tripadvisor"></i></a>
                </div>
            </div>
        </div>

        <!-- Main Header with navigation -->
        <div class="main-header">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="/">
                        <i class="fas fa-hotel logo-icon"></i> Luxury Hotel
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link active-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Rooms">Phòng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Services">Dịch vụ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Gallery">Thư viện ảnh</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Rooms" asp-action="Index">Tất cả phòng</a>
                            </li>
                        </ul>

                        <div class="user-actions">
                            <!-- If user is logged in -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <!-- Notification Bell -->
                                <div class="notification-wrapper">
                                    <button class="btn notification-btn" type="button" id="notificationDropdown"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-bell notification-icon"></i>
                                        <span class="notification-badge" id="notificationBadge">3</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end notification-dropdown"
                                        aria-labelledby="notificationDropdown">
                                        <li class="notification-header">
                                            <h6 class="mb-0">Thông báo</h6>
                                            <button class="btn btn-sm mark-all-read" id="markAllRead">Đánh dấu đã
                                                đọc</button>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <div class="notification-list" id="notificationList">
                                            <!-- Notifications will be loaded here -->
                                            <li class="notification-item unread">
                                                <div class="notification-content">
                                                    <div class="notification-icon-wrapper booking">
                                                        <i class="fas fa-calendar-check"></i>
                                                    </div>
                                                    <div class="notification-text">
                                                        <div class="notification-title">Đặt phòng thành công</div>
                                                        <div class="notification-message">Phòng Deluxe Suite đã được đặt
                                                            thành công</div>
                                                        <div class="notification-time">2 phút trước</div>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="notification-item unread">
                                                <div class="notification-content">
                                                    <div class="notification-icon-wrapper payment">
                                                        <i class="fas fa-credit-card"></i>
                                                    </div>
                                                    <div class="notification-text">
                                                        <div class="notification-title">Thanh toán hoàn tất</div>
                                                        <div class="notification-message">Thanh toán 2,500,000 VNĐ đã được
                                                            xử lý</div>
                                                        <div class="notification-time">1 giờ trước</div>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="notification-item">
                                                <div class="notification-content">
                                                    <div class="notification-icon-wrapper promotion">
                                                        <i class="fas fa-gift"></i>
                                                    </div>
                                                    <div class="notification-text">
                                                        <div class="notification-title">Ưu đãi đặc biệt</div>
                                                        <div class="notification-message">Giảm 20% cho lần đặt phòng tiếp
                                                            theo</div>
                                                        <div class="notification-time">1 ngày trước</div>
                                                    </div>
                                                </div>
                                            </li>
                                        </div>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li class="notification-footer">
                                            <a class="dropdown-item text-center" href="#" id="viewAllNotifications">
                                                <i class="fas fa-list"></i> Xem tất cả thông báo
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                                <div class="dropdown">
                                    <button class="btn user-account-btn" type="button" id="userDropdown"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-circle user-icon"></i>
                                        <span class="user-name">@User.Identity.Name</span>
                                        <i class="fas fa-chevron-down dropdown-arrow"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                                <i class="fas fa-user"></i> Hồ sơ
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Bookings" asp-action="Index">
                                                <i class="fas fa-history"></i> Lịch sử đặt phòng
                                            </a>
                                        </li>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-heart"></i> Yêu thích</a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post">
                                                <button type="submit" class="dropdown-item"><i
                                                        class="fas fa-sign-out-alt"></i> Đăng xuất</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-login">Đăng nhập</a>
                                <a asp-controller="Account" asp-action="Register" class="btn btn-register">Đăng ký</a>
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/@@microsoft/signalr@@latest/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (User.Identity.IsAuthenticated)
    {
        <script src="~/js/signalr-notifications.js" asp-append-version="true"></script>
    }

    <script>
        // Global variables for authentication status
        window.isUserAuthenticated = @Json.Serialize(User.Identity.IsAuthenticated);
        window.isUserAdmin = @Json.Serialize(User.IsInRole("Admin"));
        window.currentUserId = '@(User.Identity.IsAuthenticated ? (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "") : "")';

        // Add CSRF token to all AJAX requests
        $.ajaxSetup({
            beforeSend: function (xhr, settings) {
                if (!(/^http:.*/.test(settings.url) || /^https:.*/.test(settings.url))) {
                    xhr.setRequestHeader("RequestVerificationToken",
                        $('input[name="__RequestVerificationToken"]').val());
                }
            }
        });
    </script>

    @Html.AntiForgeryToken()

    @await RenderSectionAsync("Scripts", required: false)

    <!-- User Notifications Script -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script src="~/js/user-notifications.js" asp-append-version="true"></script>
    }

    <script>
        // Highlight active navigation menu item
        $(document).ready(function () {
            var path = window.location.pathname;
            $(".navbar-nav .nav-link").each(function () {
                var href = $(this).attr('href');
                if (path === href) {
                    $(this).addClass('active-link');
                } else {
                    $(this).removeClass('active-link');
                }
            });
        });
    </script>
</body>

</html>
