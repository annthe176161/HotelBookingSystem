@model HotelBookingSystem.ViewModels.Room.RoomDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<!-- Hero Banner -->
<div class="room-detail-banner" style="background-image: url('@Model.MainImageUrl')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="banner-content">
                    <h1>@Model.Name</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Rooms">Phòng</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="room-detail-container">
    <div class="container">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <div class="room-overview">
                    <!-- Room Header -->
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div class="flex-grow-1">
                            <h2 class="room-title">@Model.Name</h2>
                            <div class="room-rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Floor(Model.AverageRating))
                                    {
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                    }
                                    else if (i - Model.AverageRating < 1 && i - Model.AverageRating > 0)
                                    {
                                        <i class="fas fa-star-half-alt" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star" aria-hidden="true"></i>
                                    }
                                }
                                <span class="rating-value">@Model.AverageRating.ToString("0.0")</span>
                                <span class="reviews-count">(@Model.ReviewsCount đánh giá)</span>
                            </div>
                        </div>
                        <div class="room-actions">
                            <button class="btn favorite-btn" data-room-id="@Model.Id" aria-label="Thêm vào yêu thích">
                                <i class="far fa-heart" aria-hidden="true"></i> Yêu thích
                            </button>
                            <button class="btn share-btn" aria-label="Chia sẻ phòng">
                                <i class="fas fa-share-alt" aria-hidden="true"></i> Chia sẻ
                            </button>
                        </div>
                    </div>

                    <!-- Room Images Gallery -->
                    <div class="room-gallery">
                        <div class="main-image">
                            <img src="@Model.MainImageUrl" alt="@Model.Name" id="main-room-image">
                        </div>
                        @if (Model.ImageUrls.Count > 1)
                        {
                            <div class="thumbnails">
                                @foreach (var image in Model.ImageUrls)
                                {
                                    <div class="thumbnail @(image == Model.MainImageUrl ? "active" : "")" role="button" tabindex="0">
                                        <img src="@image" alt="@Model.Name" onclick="changeMainImage('@image')">
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Room Description -->
                <div class="room-description">
                    <h3>Mô tả phòng</h3>
                    <p>@Html.Raw(Model.Description)</p>
                </div>

                <!-- Room Features -->
                <div class="room-features-section">
                    <h3>Tiện nghi phòng</h3>
                    <div class="room-features">
                        <div class="row">
                            @foreach (var feature in Model.Features)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="feature-item" tabindex="0">
                                        <i class="@feature.Icon" aria-hidden="true"></i>
                                        <span>@feature.Name</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Room Specifications -->
                <div class="room-specs">
                    <h3>Thông tin phòng</h3>
                    <div class="specs-grid">
                        <div class="spec-item" tabindex="0">
                            <i class="fas fa-users" aria-hidden="true"></i>
                            <div class="spec-info">
                                <span class="spec-label">Sức chứa</span>
                                <span class="spec-value">@Model.Capacity người</span>
                            </div>
                        </div>
                        <div class="spec-item" tabindex="0">
                            <i class="fas fa-tag" aria-hidden="true"></i>
                            <div class="spec-info">
                                <span class="spec-label">Loại phòng</span>
                                <span class="spec-value">@Model.RoomType</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Room Policies -->
                <div class="room-policies">
                    <h3>Chính sách phòng & Điều khoản đặt phòng</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="policy-item" tabindex="0">
                                <div class="policy-icon">
                                    <i class="fas fa-calendar-times" aria-hidden="true"></i>
                                </div>
                                <div class="policy-content">
                                    <h5>Chính sách hủy phòng</h5>
                                    <p>Miễn phí hủy phòng trước 24 giờ kể từ thời điểm nhận phòng. Không áp dụng phí hủy phòng do thanh toán tại khách sạn.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="policy-item" tabindex="0">
                                <div class="policy-icon">
                                    <i class="fas fa-credit-card" aria-hidden="true"></i>
                                </div>
                                <div class="policy-content">
                                    <h5>Thanh toán</h5>
                                    <p>Thanh toán trực tiếp tại khách sạn khi nhận phòng. Chấp nhận tiền mặt và thẻ.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="policy-item" tabindex="0">
                                <div class="policy-icon">
                                    <i class="fas fa-smoking-ban" aria-hidden="true"></i>
                                </div>
                                <div class="policy-content">
                                    <h5>Không hút thuốc</h5>
                                    <p>Không được phép hút thuốc trong phòng. Khu vực hút thuốc có sẵn tại sảnh.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="policy-item" tabindex="0">
                                <div class="policy-icon">
                                    <i class="fas fa-paw" aria-hidden="true"></i>
                                </div>
                                <div class="policy-content">
                                    <h5>Thú cưng</h5>
                                    <p>Không cho phép mang thú cưng vào khách sạn để đảm bảo vệ sinh và sự thoải mái cho tất cả khách hàng.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="policy-item" tabindex="0">
                                <div class="policy-icon">
                                    <i class="fas fa-clock" aria-hidden="true"></i>
                                </div>
                                <div class="policy-content">
                                    <h5>Giờ nhận phòng</h5>
                                    <p>Từ 14:00 - 22:00 hàng ngày. Nhận phòng sớm có thể được sắp xếp với phụ phí.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="policy-item" tabindex="0">
                                <div class="policy-icon">
                                    <i class="fas fa-sign-out-alt" aria-hidden="true"></i>
                                </div>
                                <div class="policy-content">
                                    <h5>Giờ trả phòng</h5>
                                    <p>Trước 12:00 trưa. Trả phòng trễ có thể bị tính phí thêm 50% giá phòng/ngày.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="policy-item" tabindex="0">
                                <div class="policy-icon">
                                    <i class="fas fa-id-card" aria-hidden="true"></i>
                                </div>
                                <div class="policy-content">
                                    <h5>Giấy tờ tùy thân</h5>
                                    <p>Bắt buộc xuất trình CMND/CCCD hoặc Passport khi nhận phòng theo quy định pháp luật.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="policy-item" tabindex="0">
                                <div class="policy-icon">
                                    <i class="fas fa-user-friends" aria-hidden="true"></i>
                                </div>
                                <div class="policy-content">
                                    <h5>Số lượng khách</h5>
                                    <p>Tối đa @Model.Capacity người/phòng. Không cho phép khách thêm qua đêm mà không đăng ký.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Room Amenities & What's Included -->
                <div class="room-amenities">
                    <h3>Tiện nghi & Dịch vụ phòng</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="fas fa-bed text-primary"></i> Tiện nghi giường ngủ</h5>
                            <ul class="amenity-list">
                                <li><i class="fas fa-check text-success"></i> Ga trải giường cao cấp</li>
                                <li><i class="fas fa-check text-success"></i> Gối êm ái</li>
                                <li><i class="fas fa-check text-success"></i> Chăn mền sạch sẽ</li>
                                <li><i class="fas fa-check text-success"></i> Thay ga giường hàng ngày</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-shower text-primary"></i> Phòng tắm riêng</h5>
                            <ul class="amenity-list">
                                <li><i class="fas fa-check text-success"></i> Vòi sen nước nóng lạnh</li>
                                <li><i class="fas fa-check text-success"></i> Khăn tắm sạch</li>
                                <li><i class="fas fa-check text-success"></i> Dầu gội & sữa tắm</li>
                                <li><i class="fas fa-check text-success"></i> Máy sấy tóc</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-tv text-primary"></i> Giải trí</h5>
                            <ul class="amenity-list">
                                <li><i class="fas fa-check text-success"></i> TV màn hình phẳng</li>
                                <li><i class="fas fa-check text-success"></i> Kênh truyền hình cáp</li>
                                <li><i class="fas fa-check text-success"></i> WiFi miễn phí tốc độ cao</li>
                                <li><i class="fas fa-check text-success"></i> Điều hòa không khí</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-concierge-bell text-primary"></i> Dịch vụ khách sạn</h5>
                            <ul class="amenity-list">
                                <li><i class="fas fa-check text-success"></i> Dọn phòng hàng ngày</li>
                                <li><i class="fas fa-check text-success"></i> Lễ tân 24/7</li>
                                <li><i class="fas fa-check text-success"></i> Dịch vụ giặt ủi (có phí)</li>
                                <li><i class="fas fa-check text-success"></i> Gọi taxi & xe ôm</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Important Information -->
                <div class="important-info">
                    <h3>Thông tin quan trọng cần biết</h3>
                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle"></i> Khi nhận phòng, quý khách cần mang theo:</h5>
                        <ul class="mb-0">
                            <li>CMND/CCCD hoặc Passport còn hiệu lực</li>
                            <li>Mã đặt phòng (trong email xác nhận)</li>
                            <li>Tiền thanh toán (tiền mặt hoặc thẻ)</li>
                        </ul>
                    </div>
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle"></i> Lưu ý quan trọng:</h5>
                        <ul class="mb-0">
                            <li>Phòng có thể được kiểm tra trước khi nhận</li>
                            <li>Không được mang đồ ăn có mùi vào phòng</li>
                            <li>Giữ gìn trật tự, không gây ồn ào sau 22:00</li>
                            <li>Báo cáo ngay nếu có hư hỏng để được hỗ trợ</li>
                        </ul>
                    </div>
                </div>

                <!-- Contact & Support -->
                <div class="contact-support">
                    <h3>Hỗ trợ & Liên hệ</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="support-item">
                                <h5><i class="fas fa-phone text-success"></i> Hotline 24/7</h5>
                                <p>1900-1234 - Hỗ trợ khách hàng mọi lúc</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="support-item">
                                <h5><i class="fas fa-envelope text-primary"></i> Email hỗ trợ</h5>
                                <p>support@hotelbook.com</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reviews Section -->
                @if (Model.Reviews.Any())
                {
                    <div class="room-reviews">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3>Đánh giá từ khách hàng (@Model.ReviewsCount)</h3>
                        </div>

                        <div class="reviews-list">
                            @foreach (var review in Model.Reviews.Take(5))
                            {
                                <div class="review-item" tabindex="0">
                                    <div class="review-header">
                                        <div class="reviewer-info">
                                            <div class="reviewer-avatar-placeholder">
                                                @review.UserName[0]
                                            </div>
                                            <div>
                                                <h5>@review.UserName</h5>
                                                <div class="review-date">@review.Date.ToString("dd/MM/yyyy")</div>
                                            </div>
                                        </div>
                                        <div class="review-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="@(i <= review.Rating ? "fas" : "far") fa-star" aria-hidden="true"></i>
                                            }
                                        </div>
                                    </div>
                                    <div class="review-content">
                                        <p>@review.Comment</p>
                                    </div>
                                    <div class="review-actions">
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="far fa-thumbs-up me-1" aria-hidden="true"></i> Hữu ích
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>

                        @if (Model.ReviewsCount > 5)
                        {
                            <div class="text-center mt-4">
                                <button class="btn btn-outline-primary">Xem thêm đánh giá</button>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Booking Sidebar -->
            <div class="col-lg-4">
                <div class="booking-sidebar">
                    <div class="price-container">
                        <div class="current-price">@Model.PricePerNight.ToString("N0") VNĐ</div>
                        <div class="price-unit">/đêm</div>
                    </div>

                    <form id="booking-form">
                        <div class="form-group">
                            <label for="checkin-date">Ngày nhận phòng</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="far fa-calendar-alt" aria-hidden="true"></i></span>
                                <input type="date" class="form-control" id="checkin-date" name="checkin" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="checkout-date">Ngày trả phòng</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="far fa-calendar-alt" aria-hidden="true"></i></span>
                                <input type="date" class="form-control" id="checkout-date" name="checkout" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="guests">Số lượng khách</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-friends" aria-hidden="true"></i></span>
                                <select class="form-control" id="guests" name="guests" required>
                                    @for (int i = 1; i <= Model.Capacity; i++)
                                    {
                                        <option value="@i">@i người</option>
                                    }
                                </select>
                            </div>
                            <small class="form-text text-muted">Tối đa @Model.Capacity người</small>
                        </div>

                        <div class="booking-summary">
                            <div class="summary-item">
                                <span>Giá phòng x <span id="nights-count">1</span> đêm</span>
                                <span id="room-total-price">@Model.PricePerNight.ToString("N0") VNĐ</span>
                            </div>
                            <div class="summary-total text-center" style="flex-direction: column; align-items: center;">
                                <span style="font-size: 1.2rem; font-weight: 700;">Tổng cộng</span>
                                <span id="total-price" style="font-size: 1.5rem; font-weight: 700; color: #e74c3c;">@Model.PricePerNight.ToString("N0") VNĐ</span>
                                <small class="text-muted d-block mt-2" style="font-size: 0.95rem;">Giá đã bao gồm thuế và phí dịch vụ</small>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-calendar-check me-2" aria-hidden="true"></i>
                            Đặt phòng ngay
                        </button>
                    </form>

                    <div class="booking-features">
                        <div class="booking-feature-item">
                            <i class="fas fa-calendar-check" aria-hidden="true"></i>
                            <span>Xác nhận đặt phòng ngay</span>
                        </div>
                        <div class="booking-feature-item">
                            <i class="fas fa-ban" aria-hidden="true"></i>
                            <span>Miễn phí hủy trước 24 giờ</span>
                        </div>
                        <div class="booking-feature-item">
                            <i class="fas fa-credit-card" aria-hidden="true"></i>
                            <span>Thanh toán tại khách sạn</span>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Similar Rooms -->
        @if (Model.SimilarRooms.Any())
        {
            <div class="similar-rooms-section">
                <h3>Phòng tương tự</h3>
                <div class="row">
                    @foreach (var room in Model.SimilarRooms)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="similar-room-card" tabindex="0">
                                <div class="room-img">
                                    <img src="@room.ImageUrl" alt="@room.Name">
                                    <div class="room-price">
                                        <span>@room.Price.ToString("N0") VNĐ</span>
                                        <small>/đêm</small>
                                    </div>
                                </div>
                                <div class="room-info">
                                    <h4>@room.Name</h4>
                                    <div class="room-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Floor(room.Rating))
                                            {
                                                <i class="fas fa-star" aria-hidden="true"></i>
                                            }
                                            else if (i - room.Rating < 1 && i - room.Rating > 0)
                                            {
                                                <i class="fas fa-star-half-alt" aria-hidden="true"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star" aria-hidden="true"></i>
                                            }
                                        }
                                        <span>(@room.Rating.ToString("0.0"))</span>
                                    </div>
                                    <a href="@Url.Action("Details", "Rooms", new { id = room.Id })"
                                       class="btn btn-outline-primary btn-sm">
                                        Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shareModalLabel">Chia sẻ phòng này</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <div class="share-buttons">
                    <a href="#" class="share-btn facebook" aria-label="Chia sẻ lên Facebook">
                        <i class="fab fa-facebook-f" aria-hidden="true"></i> Facebook
                    </a>
                    <a href="#" class="share-btn twitter" aria-label="Chia sẻ lên Twitter">
                        <i class="fab fa-twitter" aria-hidden="true"></i> Twitter
                    </a>
                    <a href="#" class="share-btn whatsapp" aria-label="Chia sẻ qua WhatsApp">
                        <i class="fab fa-whatsapp" aria-hidden="true"></i> WhatsApp
                    </a>
                    <a href="#" class="share-btn email" aria-label="Chia sẻ qua Email">
                        <i class="fas fa-envelope" aria-hidden="true"></i> Email
                    </a>
                </div>
                <div class="copy-link mt-3">
                    <div class="input-group">
                        <input type="text" class="form-control" id="share-link"
                               value="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path"
                               readonly aria-label="Đường link chia sẻ">
                        <button class="btn btn-outline-secondary" type="button" id="copy-link-btn">
                            Sao chép
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/room-details.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/room-details.css" asp-append-version="true" />
}