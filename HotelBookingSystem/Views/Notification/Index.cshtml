@{
    ViewData["Title"] = "Thông báo của tôi";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-bell me-2"></i>Thông báo của tôi</h2>
                <button class="btn btn-outline-primary" id="markAllAsRead">
                    <i class="fas fa-check-double"></i> Đánh dấu tất cả đã đọc
                </button>
            </div>

            <!-- Real-time notification status -->
            <div class="alert alert-info" id="connectionStatus">
                <i class="fas fa-wifi me-2"></i>
                <span id="statusText">Đang kết nối...</span>
            </div>

            <!-- Notification filters -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <select class="form-select" id="notificationTypeFilter">
                                <option value="">Tất cả loại thông báo</option>
                                <option value="booking">Đặt phòng</option>
                                <option value="booking_status">Trạng thái đặt phòng</option>
                                <option value="payment">Thanh toán</option>
                                <option value="booking_confirmation">Xác nhận đặt phòng</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" id="dateFilter">
                                <option value="">Tất cả thời gian</option>
                                <option value="today">Hôm nay</option>
                                <option value="week">Tuần này</option>
                                <option value="month">Tháng này</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-outline-secondary" id="clearNotifications">
                                <i class="fas fa-trash"></i> Xóa tất cả
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notifications list -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Danh sách thông báo
                        <span class="badge bg-primary ms-2" id="notificationCounter">0</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div id="notificationsList" class="notifications-container">
                        <!-- Initial message -->
                        <div class="text-center text-muted py-5" id="emptyState">
                            <i class="fas fa-bell-slash fa-3x mb-3"></i>
                            <p>Chưa có thông báo nào</p>
                            <small>Thông báo về đặt phòng và thanh toán sẽ hiển thị ở đây</small>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Pagination" class="mt-3" id="paginationContainer" style="display: none;">
                        <ul class="pagination justify-content-center" id="paginationList">
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Notification detail modal -->
<div class="modal fade" id="notificationDetailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Chi tiết thông báo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Content will be populated by JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="actionButton" style="display: none;">Xem đặt
                    phòng</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .notifications-container {
            max-height: 600px;
            overflow-y: auto;
        }

        .notification-item {
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
            transition: all 0.3s ease;
            background: white;
        }

        .notification-item:hover {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(-1px);
        }

        .notification-item.unread {
            border-left: 4px solid #007bff;
            background: #f8f9ff;
        }

        .notification-item.new {
            animation: slideIn 0.5s ease;
        }

        .notification-header {
            display: flex;
            justify-content-between;
            align-items: center;
            margin-bottom: 8px;
        }

        .notification-type {
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .notification-type.booking {
            color: #007bff;
        }

        .notification-type.booking_status {
            color: #28a745;
        }

        .notification-type.payment {
            color: #ffc107;
        }

        .notification-type.booking_confirmation {
            color: #17a2b8;
        }

        .notification-time {
            font-size: 0.75rem;
            color: #6c757d;
        }

        .notification-message {
            color: #495057;
            line-height: 1.5;
        }

        .notification-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 1.2rem;
            color: white;
        }

        .notification-icon.booking {
            background: #007bff;
        }

        .notification-icon.booking_status {
            background: #28a745;
        }

        .notification-icon.payment {
            background: #ffc107;
        }

        .notification-icon.booking_confirmation {
            background: #17a2b8;
        }

        .notification-content {
            flex: 1;
        }

        .notification-actions {
            margin-top: 10px;
        }

        .animate-pulse {
            animation: pulse 2s infinite;
        }

        #connectionStatus.connected {
            background-color: #d1edff;
            border-color: #bee5eb;
            color: #0c5460;
        }

        #connectionStatus.disconnected {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }
    </style>
}

@section Scripts {
    <script src="~/js/customer-notifications-new.js" asp-append-version="true"></script>
}
